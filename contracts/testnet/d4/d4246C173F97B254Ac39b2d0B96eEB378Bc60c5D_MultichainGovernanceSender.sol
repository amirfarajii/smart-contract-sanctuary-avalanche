pragma solidity 0.8.16;


import { AxelarExecutable } from '@axelar-network/axelar-gmp-sdk-solidity/contracts/executables/AxelarExecutable.sol';
import { IAxelarGateway } from '@axelar-network/axelar-gmp-sdk-solidity/contracts/interfaces/IAxelarGateway.sol';
import { IAxelarGasService } from '@axelar-network/axelar-gmp-sdk-solidity/contracts/interfaces/IAxelarGasService.sol';
import "@openzeppelin/contracts/utils/Strings.sol";

contract MultichainGovernanceSender is AxelarExecutable {

  address dao;
  IAxelarGasService public immutable gasReceiver;
  SupportedChains[] supportedChains;

  uint256 loanToValue;

  error OnlyDAO();

  struct SupportedChains {
    string daoAddress;
    string chainName;
  }

  modifier onlyDao() {
    if(msg.sender != dao) {
      revert OnlyDAO();
    }
    _;
  }

  constructor(address _dao, address _gateway, address _gasReceiver, SupportedChains[] memory _supportedChains) AxelarExecutable(_gateway)  {
    dao = _dao;
    gasReceiver = IAxelarGasService(_gasReceiver);
    for(uint i = 0; i < _supportedChains.length; i++) {
      supportedChains.push(_supportedChains[i]);
    }
  }

  function setLoanToValue(uint256 _loanToValue) external onlyDao {
    loanToValue = _loanToValue;
    for(uint i = 0; i < supportedChains.length; i++) {
      _sendMessage(
        supportedChains[i].chainName,
        supportedChains[i].daoAddress,
        Strings.toString(_loanToValue)
      );
    }
  }

  function _sendMessage(
        string memory _destinationChain,
        string memory _destinationAddress,
        string memory _value
  ) public payable onlyDao  {
        bytes memory payload = abi.encode(_value);
        if (msg.value > 0) {
            gasReceiver.payNativeGasForContractCall{ value: msg.value }(
                address(this),
                _destinationChain,
                _destinationAddress,
                payload,
                msg.sender
            );
        }
        gateway.callContract(_destinationChain, _destinationAddress, payload);
  }
  
}

