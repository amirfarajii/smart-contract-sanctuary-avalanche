import '@openzeppelin/contracts/utils/Strings.sol';
import './EscrowAccount.sol';

contract Fundraiser is AxelarExecutable {
    struct ProgramData {
        uint256 id;
        string name;
        string description;
        string sourceChain;
        string imgUrl;
        address escrowAccount;
        uint256 budget;
    }

    mapping(address => mapping(uint256 => ProgramData)) public programs;
    ProgramData[] allPrograms;

    uint256 public id = 1;

    IAxelarGasService public immutable gasService;

    constructor(address gateway_, address gasReceiver_) AxelarExecutable(gateway_) {
        gasService = IAxelarGasService(gasReceiver_);
    }

    function addCampaign(
        string memory campaignName,
        string memory description,
        string memory srcChain,
        string memory imgUrl,
        uint256 budget
    ) external returns (uint256) {
        address escrowAcctAddress = createEscrowAccount(campaignName, msg.sender, budget);
        ProgramData memory newProgram = ProgramData(id, campaignName, description, srcChain, imgUrl, escrowAcctAddress, budget);
        programs[msg.sender][id] = newProgram;
        allPrograms.push(newProgram);
        id++;
        return id;
    }

    function getPrograms() public view returns (ProgramData[] memory) {
        return allPrograms;
    }

    function createEscrowAccount(string memory _name, address _recipient, uint256 _budget) public returns (address) {
        EscrowAccount escrow = new EscrowAccount(_name, _recipient, _budget); // creating new contract inside another parent contract
        return address(escrow);
    }

    function redeemCampaign(uint256 _programId) public {
        if (programs[msg.sender][_programId].id < 1) return;
        ProgramData memory program = programs[msg.sender][_programId];
        EscrowAccount(program.escrowAccount).transferEther();
    }
}