import {Order, PoolCreateParams} from "../structs/amm/PoolStructs.sol";
import "../interfaces/IAMM.sol";

contract Pool is NonblockingLzApp, ReentrancyGuard {
    using BytesLib for bytes;

    event LzReceived(uint16 srcId);
    event LiquidityAdded(address _lp, address _ft, address _nft, uint256 _ftAmount, uint256[] _nftIds);
    event LiquidityRemoved(address _lp, address _ft, address _nft, uint256 _ftAmount, uint256[] _nftIds);
    event OrderFilled(address _sender, address[] _sellers, address _ft, address _nft, uint256 _amount);
    event OrderNotFilled(address _sender, uint16 _srcChainId, uint256 _refundableAmount);

    error InvalidFungible();
    error InvalidNFT();

    uint8 private constant ACTION_ORDER = 1;
    bytes private constant ESTIMATE_PAYLOAD = "\x01\x02\x03\x04";

    // Contract-level Properties:
    IAMM public amm;
    uint256 public price;
    mapping(address => mapping(uint16 => mapping(address => uint256))) public refunds; // refundee -> srcChainId -> tokenAddr
    uint256 private invariant;
    uint256[] public nftLocked;
    uint256 public initialNftAmount;
    uint256 public ftLocked;
    IERC721Ownable public erc721;
    IERC20 public erc20;
    bool public isDeposited;
    uint96 royaltyFraction;

    modifier whenNotPaused(uint16 _chainId) {
        require(!amm.globalPaused() && !amm.pausedChain(_chainId), "paused");
        _;
    }

    modifier onlyAMM() {
        require(_msgSender() == address(amm));
        _;
    }

    constructor(PoolCreateParams memory _position, address _lzEndpoint) NonblockingLzApp(_lzEndpoint) {
        // TODO (Must): Validate against ERC721 and ERC20 standards - does PoolCreateParams.owner has enough fts and nfts, etc.
        amm = IAMM(_msgSender());

        initialNftAmount = _position.nftAmount;
        ftLocked = _position.ftAmount;
        invariant = ftLocked * initialNftAmount;
        price = ftLocked / initialNftAmount;
        erc721 = IERC721Ownable(_position.nft);
        erc20 = IERC20(_position.ft);

        uint16[] memory lzChainIds = amm.getLzChainIds();
        for (uint8 i = 0; i < lzChainIds.length; i++) {
            uint16 lzChainId = lzChainIds[i];
            trustedRemoteLookup[lzChainId] = amm.getTrustedRemote(lzChainId);
        }
    }

    function estimateFee(uint16 _dstChainId, bool _useZro, bytes calldata _adapterParams) public view returns (uint nativeFee, uint zroFee) {
        return lzEndpoint.estimateFees(_dstChainId, address(this), ESTIMATE_PAYLOAD, _useZro, _adapterParams);
    }

    // TODO: (Must) Execute by OmniseaRouter only. address _orderer/sender as a param not msg.sender (Router)
    function createOrder(
        Order memory _order,
        uint256[] memory _nftIds,
        bytes memory _adapterParams
    ) public payable whenNotPaused(_order.chainId) nonReentrant {
        require(isDeposited);
        _order.sender = _msgSender();
        _validateAbstractOrder(_order);
        bool isBuy = address(erc721) == _order.asset;

        if (_order.chainId == amm.chainId()) {
            _matchOrder(_order, _nftIds, isBuy);

            return;
        }
        _adapterParams;
        // TODO: (Must) Stargate send()
    }

    // On Order receive
    function _nonblockingLzReceive(
        uint16 _srcChainId,
        bytes memory,
        uint64,
        bytes memory _payload
    ) internal override whenNotPaused(_srcChainId) {
        require(isDeposited);
        emit LzReceived(_srcChainId);
        require(trustedRemoteLookup[_srcChainId].length != 0, "!remote");

        // Message received from Aptos:
        (Order memory order) = _srcChainId == amm.aptosChainId()
        ? _decodeNonEVMPayload(_payload)
        : _decodeEVMPayload(_payload);

        // TODO (Must) Validate incoming data
        uint256[] memory _noIds;
        bool isBuy = address(erc721) == order.asset;
        _matchOrder(order, _noIds, isBuy);
    }

    // TODO: (Must) ERC20 balance of sender as param - balanceOf() if local, _amount if Stargate
    function _matchOrder(Order memory _order, uint256[] memory _nftIds, bool _isBuy) internal {
        _validateOrder(_order, _nftIds, _isBuy);
        address sender = _order.sender;
        uint256 orderAmount = _order.amount;

        while (orderAmount > 0) {
            uint256 nftLockedCount = nftLocked.length;

            if (_isBuy) {
                uint256 ftAfter = invariant / (nftLockedCount - 1);
                price = ftAfter - ftLocked;

                uint256 ftBalance = erc20.balanceOf(sender);
                if (ftBalance < price) {
                    break;
                }

                uint256 nftBalance = erc721.balanceOf(address(this));
                if (nftBalance == 1) {
                    break;
                }

                erc20.transferFrom(sender, address(this), price);
                erc721.transferFrom(address(this), sender, nftLocked[nftLockedCount-1]);
                nftLocked.pop();
                ftLocked += price;
                orderAmount--;
            } else {
                uint256 ftAfter = invariant / (nftLockedCount + 1);
                price = ftLocked - ftAfter;

                uint256 ftBalance = erc20.balanceOf(address(this));
                if (ftBalance < price) {
                    break;
                }

                uint256 nftBalance = erc721.balanceOf(sender);
                if (nftBalance == 0) {
                    break;
                }

                uint256 tokenId = _nftIds[orderAmount - 1];
                erc721.transferFrom(sender, address(this), tokenId);
                nftLocked.push(tokenId);

                erc20.transferFrom(address(this), sender, price);
                ftLocked = ftAfter;
                orderAmount--;
            }
        }
    }

    function deposit(uint256[] memory ids) external {
        require(!isDeposited);

        for (uint i = 0; i < ids.length; i++) {
            erc721.transferFrom(msg.sender, address(this), ids[i]);
            nftLocked.push(ids[i]);

            if (nftLocked.length == initialNftAmount) {
                isDeposited = true;
                return;
            }
        }
    }

    function setRoyalty(uint96 _royaltyFraction) external {
        address creator = erc721.owner();
        require(creator == msg.sender);
        royaltyFraction = _royaltyFraction;
    }

    function royaltyInfo(uint256 _salePrice) public virtual returns (address, uint256) {
        address receiver = erc721.owner();
        uint256 royaltyAmount = (_salePrice * royaltyFraction) / _feeDenominator();

        return (receiver, royaltyAmount);
    }

    function _decodeNonEVMPayload(bytes memory _payload) internal pure returns (Order memory) {
        // require(_payload.length == 93, "Pool:1");

        address sender = _payload.toAddress(0);
        address baseAsset = _payload.toAddress(20);
        address asset = _payload.toAddress(40);
        uint256 amount = _payload.toUint256(60);
        uint16 chainId = _payload.toUint16(92);

        return Order(sender, baseAsset, asset, amount, chainId);
    }

    function _decodeEVMPayload(bytes memory _payload) internal pure returns (Order memory) {
        (Order memory order) = abi.decode(_payload, (Order));

        return order;
    }

    function setTrustedRemotes() public onlyOwner {
        uint16[] memory lzChainIds = amm.getLzChainIds();
        for (uint8 i = 0; i < lzChainIds.length; i++) {
            uint16 lzChainId = lzChainIds[i];
            trustedRemoteLookup[lzChainId] = amm.getTrustedRemote(lzChainId);
        }
    }

    function _feeDenominator() internal pure virtual returns (uint96) {
        return 10000;
    }

    function _validateAbstractOrder(Order memory _order) internal pure {
        require(_order.amount > 0);
        require(_order.baseAsset != address(0));
        require(_order.asset != address(0));
        require(_order.chainId > 0);
    }

    function _validateOrder(Order memory _order, uint256[] memory _nftIds, bool _isBuy) internal view {
        require(_order.baseAsset == address(erc20));
        require(_order.asset == address(erc721));

        if (!_isBuy) {
            require(_nftIds.length > 0);
        }
    }
}

