pragma solidity ^0.8.0;

import "@openzeppelin/contracts/proxy/ERC1967/ERC1967Upgrade.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";

import "./Setters.sol";
import "./Getters.sol";

contract Governance is Setters, Getters, ERC1967Upgrade  {
    event ContractUpgraded(address indexed oldContract, address indexed newContract);

    /// @dev upgrade serves to upgrade contract implementations
    function upgrade(address newImplementation) public {
        require(hasRole(DEFAULT_ADMIN_ROLE, _msgSender()), "Caller is not a admin");

        address currentImplementation = _getImplementation();

        _upgradeTo(newImplementation);

        /// @dev call initialize function of the new implementation
        (bool success, bytes memory reason) = newImplementation.delegatecall(abi.encodeWithSignature("initialize()"));

        require(success, string(reason));

        emit ContractUpgraded(currentImplementation, newImplementation);
    }

        /**
    * Update Admin wallet where all commission will go.
    */
    function updateAdminAddress(address _newAdminWallet) external {
        require(hasRole(DEFAULT_ADMIN_ROLE, _msgSender()), "1");
        emit UpdateAdminWallet(_adminAddress, _newAdminWallet);
        _adminAddress = _newAdminWallet;
    }

    function updateAdminCommissionPercent(uint8 _commision) external {
        require(hasRole(DEFAULT_ADMIN_ROLE, _msgSender()), "1");
        _adminCommissionPercentage = _commision;
        emit CommissionUpdated(_adminCommissionPercentage);
    }

    function updateCurrencyStatus(address _currency, bool status) external {
        require(hasRole(DEFAULT_ADMIN_ROLE, _msgSender()), "1");
        approvedCurrency[_currency] = status;
    }


    function updateNftStatus(address _nft, bool status) external {
        require(hasRole(DEFAULT_ADMIN_ROLE, _msgSender()), "1");
        approvedNfts[_nft] = status;
    }

        /**
     * @dev Update Pause State
     */
    function updatePauseStatus(bool _pauseStatus)
        public
    {
        require(hasRole(DEFAULT_ADMIN_ROLE, _msgSender()), "1");
        if (_pauseStatus) {
             _pause();
        } else {
            _unpause();
        }
    }
}

