// Interfaces
import '@chainlink/contracts/src/v0.8/interfaces/VRFCoordinatorV2Interface.sol';
import './interfaces/IVouchers.sol';

// Contract
contract Roulette is
    Initializable,
    AccessControlUpgradeable,
    VRFConsumerBaseV2Upgradeable
{
    using SafeMathUpgradeable for uint;
    using CountersUpgradeable for CountersUpgradeable.Counter;

    ////////////////////////
    ///     VARIABLES    ///
    ////////////////////////

    struct Game {
        uint id;
        uint reqId;
        uint result;
        uint value;
        uint blockStart;
        uint blockEnd;
    }

    struct Bet {
        uint betType;
        uint amount;
        address player;
    }

    CountersUpgradeable.Counter private gameIds;

    bool public paused;
    uint private gameTimeout;
    uint private gameMinBet;
    uint private gameMaxBet;
    uint private gameMaxBets;

    uint private bankDeposits;
    uint private bankFeePercentage;
    uint public bankFees;
    uint private playersFunds;

    uint private gameFunds;
    uint private gameTimestamp;
    uint private gameBlock;

    Bet[] private zeroBets;
    Bet[] private oddBets;
    Bet[] private evenBets;

    address public vouchers;

    address private vrfCoordinator;
    bytes32 private keyHash;
    uint64 public subId;

    bytes32 public constant ROULETTE_ADMIN_ROLE =
        keccak256('ROULETTE_ADMIN_ROLE');

    bytes32 public constant ROULETTE_LIQUIDITY_ROLE =
        keccak256('ROULETTE_LIQUIDITY_ROLE');

    ////////////////////////
    ///    INITIALISE    ///
    ////////////////////////

    function initialize(address _vouchers) external initializer {
        __AccessControl_init();

        // Settings
        paused = false;
        gameTimeout = 60; // 1 min
        gameMinBet = 1000_00000_00000_000; // 0.01 $AVAX
        gameMaxBet = 100_00000_00000_00000_000; // 100 $AVAX
        gameMaxBets = 60; // 60 bets per bet types

        // Bank
        bankFeePercentage = 20; // 20%

        // Contracts
        vouchers = _vouchers;

        // Chainlink
        vrfCoordinator = 0x2eD832Ba664535e5886b75D64C46EB9a228C2610;
        // Coordinator mainnet = 0xd5D517aBE5cF79B7e95eC98dB0f0277788aFF634
        // Coordinator testnet = 0x2eD832Ba664535e5886b75D64C46EB9a228C2610
        keyHash = 0x354d2f95da55398f44b7cff77da56283d9c6c829a4bdf1bbcaf2ad6a4d081f61;
        // KeyHash mainnet = 0x83250c5584ffa93feb6ee082981c5ebe484c865196750b39835ad4f13780435d
        // KeyHash testnet = 0x354d2f95da55398f44b7cff77da56283d9c6c829a4bdf1bbcaf2ad6a4d081f61
        subId = 380;
        // subId mainnet = 69
        // subId testnet = 380
        __VRFConsumerBaseV2_init(vrfCoordinator);

        // Admin
        _grantRole(DEFAULT_ADMIN_ROLE, _msgSender());

        // Prepare new game
        gameIds.increment();
        gameTimestamp = block.timestamp;
        gameBlock = block.number;
    }

    ////////////////////////
    ///     MAPPINGS     ///
    ////////////////////////

    mapping(uint => Game) public idToGame;
    mapping(uint => address) private reqIdToUser;
    mapping(address => uint) public playerBalance;
    mapping(address => uint) public userToDeposits;

    ////////////////////////
    ///      EVENTS      ///
    ////////////////////////

    event RouletteNewGame(uint gameId, uint gameTimestamp, uint blockStart);
    event RouletteBet(uint gameId, uint betType, uint value, address player);
    event RouletteSpin(
        uint gameId,
        uint result,
        uint blockEnd,
        address spinner
    );
    event RouletteBankDeposit(address user, uint amount);
    event RouletteBankWithdraw(address user, uint amount, uint fees);

    ////////////////////////
    ///     MODIFIERS    ///
    ////////////////////////

    function _notPaused() private view {
        if (hasRole(ROULETTE_ADMIN_ROLE, _msgSender()) == false) {
            require(paused == false);
        }
    }

    modifier notPaused() {
        _notPaused();
        _;
    }

    function _validBetType(uint _betType) private pure {
        require(_betType >= 0 && _betType <= 2);
    }

    modifier validBetType(uint _betType) {
        _validBetType(_betType);
        _;
    }

    ////////////////////////
    ///      PRIVATE     ///
    ////////////////////////

    function _pause(bool _status) private {
        paused = _status;
    }

    /**
     * @dev Request chainlink VRF for _asker.
     */
    function _requestRandomWords(address _player) private {
        // VRF Request
        uint reqId = VRFCoordinatorV2Interface(vrfCoordinator)
            .requestRandomWords(keyHash, subId, 3, 2500000, 1);

        // Store spinner address
        reqIdToUser[reqId] = _player;
    }

    /**
     * @dev Triggered by chainlink VRF response, starts a new mint.
     */
    function fulfillRandomWords(
        uint256 _reqId,
        uint256[] memory _randWords
    ) internal override {
        // Process result
        uint result = uint256(keccak256(abi.encode(_randWords[0]))) % 13;

        // Pay winners
        _payWinners(_getBetType(result));

        // Emit event
        emit RouletteSpin(
            gameIds.current(),
            result,
            block.number,
            reqIdToUser[_reqId]
        );

        // Prepare new game
        _newGame(_reqId, result);
        _pause(false);
    }

    function _getBetType(uint _result) private pure returns (uint) {
        if (_result == 0) {
            // Zero - Green
            return 0;
        } else if (_result % 2 == 1) {
            // Odd - Red
            return 1;
        } else {
            // Even - Black
            return 2;
        }
    }

    function _getMultiplier(
        uint _betType
    ) private pure validBetType(_betType) returns (uint) {
        // Zero - Green pays x12 & Odd - Red or Even - Black pays x2
        if (_betType == 0) return 12;
        else return 2;
    }

    function _payment(uint _amount, address _player) private {
        // Update balances
        playerBalance[_player] += _amount;
        playersFunds += _amount;
    }

    function _payWinners(uint _betType) private {
        // Get multiplier
        uint multiplier = _getMultiplier(_betType);

        // Pay winners
        if (_betType == 0) {
            for (uint i = 0; i < zeroBets.length; i++) {
                _payment(zeroBets[i].amount * multiplier, zeroBets[i].player);
            }
        } else if (_betType == 1) {
            for (uint i = 0; i < oddBets.length; i++) {
                _payment(oddBets[i].amount * multiplier, oddBets[i].player);
            }
        } else {
            for (uint i = 0; i < evenBets.length; i++) {
                _payment(evenBets[i].amount * multiplier, evenBets[i].player);
            }
        }

        // Delete bets
        delete zeroBets;
        delete oddBets;
        delete evenBets;
    }

    function _newGame(uint _reqId, uint _lastResult) private {
        // Get last game id
        uint lastGameId = gameIds.current();

        // Index past game
        idToGame[lastGameId] = Game(
            lastGameId,
            _reqId,
            _lastResult,
            gameFunds,
            gameBlock,
            block.number
        );

        // Increment games IDs
        gameIds.increment();

        // Reset game stats
        gameFunds = 0;
        gameTimestamp = block.timestamp;
        gameBlock = block.number;

        // Emit event
        emit RouletteNewGame(gameIds.current(), gameTimestamp, gameBlock);
    }

    function _bet(uint _betType, uint _amount, address _player) private {
        // Add new bet
        if (_betType == 0) {
            require(
                zeroBets.length < gameMaxBets,
                '_bet: Max bets reached for this bet type.'
            );
            // Zero - Green
            zeroBets.push(Bet(_betType, _amount, _player));
        } else if (_betType == 1) {
            require(
                oddBets.length < gameMaxBets,
                '_bet: Max bets reached for this bet type.'
            );
            // Odd - Red
            oddBets.push(Bet(_betType, _amount, _player));
        } else {
            require(
                evenBets.length < gameMaxBets,
                '_bet: Max bets reached for this bet type.'
            );
            // Even - Black
            evenBets.push(Bet(_betType, _amount, _player));
        }

        // Update funds stored in the game
        gameFunds += _amount;

        // Emit event
        emit RouletteBet(gameIds.current(), _betType, _amount, _player);
    }

    ////////////////////////
    ///      PUBLIC      ///
    ////////////////////////

    function getTreasury() public view returns (uint treasury) {
        return address(this).balance - gameFunds - playersFunds - bankFees;
    }

    function getBankWithdrawable(
        address _user
    ) public view returns (uint withdrawable, uint fees) {
        uint percentage = (100 / bankDeposits) * userToDeposits[_user];
        uint available = (getTreasury() / 100) * percentage;

        uint fee = (available / 100) * bankFeePercentage;
        if (
            available <= userToDeposits[_user] ||
            hasRole(ROULETTE_ADMIN_ROLE, _user) == true
        ) {
            fee = 0;
        }

        return ((available - fee), fee);
    }

    function getMaxBet(uint _betType) public view returns (uint) {
        // Compute max bet with 50% treasury threshold
        uint maxBet = (((getTreasury() / 100) * 50) /
            (_getMultiplier(_betType))) - gameFunds;

        if (maxBet > gameMaxBet) {
            return gameMaxBet;
        } else return maxBet;
    }

    function getGameSettings()
        public
        view
        returns (uint timeout, uint minBet, uint maxBet)
    {
        return (gameTimeout, gameMinBet, gameMaxBet);
    }

    function gameStatus()
        public
        view
        returns (
            uint gameId,
            uint timestamp,
            uint blockStart,
            Bet[] memory zeroBetsList,
            Bet[] memory oddBetsList,
            Bet[] memory evenBetsList,
            uint betsLength,
            uint totalValue
        )
    {
        return (
            gameIds.current(), // Game ID
            gameTimestamp, // Starting timestamp of the game
            blockStart, // Starting block of the game
            zeroBets, // Amount of bets on zero
            oddBets, // Amount of bets on odd
            evenBets, // Amount of bets on even
            zeroBets.length + oddBets.length + evenBets.length, // Amount of bets in this game
            gameFunds // Value of bets in this game
        );
    }

    function betAvax(
        uint _betType
    ) public payable validBetType(_betType) notPaused {
        // Check bet amount is correct (> 0 && < maxBet
        require(msg.value >= gameMinBet && msg.value <= getMaxBet(_betType));

        // Place bet
        _bet(_betType, msg.value, _msgSender());
    }

    function betVoucher(
        uint _betType,
        uint _betAmount
    ) public validBetType(_betType) notPaused {
        // Check bet amount is correct (> 0 && < maxBet)
        require(_betAmount >= gameMinBet && _betAmount <= getMaxBet(_betType));

        // Transfer Tiny AVAX to this contract
        // IVouchers(vouchers).transferFrom(_msgSender(), address(this), _betAmount);

        // Swap Tiny AVAX for AVAX on Vouchers contract
        IVouchers(vouchers).burnAndRedeemFrom(_msgSender(), _betAmount);

        // Place bet
        _bet(_betType, _betAmount, _msgSender());
    }

    function spin() public notPaused {
        // Check timeout and at least one bet is placed
        require(block.timestamp >= gameTimestamp + gameTimeout);
        require(gameFunds > 0);

        // Pause bets and spin
        _pause(true);

        // Request random number
        _requestRandomWords(_msgSender());
    }

    function withdraw() public {
        require(playerBalance[_msgSender()] > 0);

        // Get withdrawal amount
        uint availableWithdraw = playerBalance[_msgSender()];

        // Update balances
        playerBalance[_msgSender()] = 0;
        playersFunds -= availableWithdraw;

        // Send AVAX
        payable(_msgSender()).transfer(availableWithdraw);
    }

    ////////////////////////
    ///       ADMIN      ///
    ////////////////////////

    function pause(bool _status) public onlyRole(ROULETTE_ADMIN_ROLE) {
        _pause(_status);
    }

    function editVouchersAddress(
        address _address
    ) public onlyRole(ROULETTE_ADMIN_ROLE) {
        vouchers = _address;
    }

    function editGameSettings(
        uint _timeout,
        uint _minBet,
        uint _maxBet
    ) public onlyRole(ROULETTE_ADMIN_ROLE) {
        gameTimeout = _timeout;
        gameMinBet = _minBet;
        gameMaxBet = _maxBet;
    }

    ////////////////////////
    ///     LIQUIDITY    ///
    ////////////////////////

    function despositToBank() public payable onlyRole(ROULETTE_LIQUIDITY_ROLE) {
        require(msg.value > 0);

        bankDeposits = bankDeposits + msg.value;
        userToDeposits[_msgSender()] = userToDeposits[_msgSender()] + msg.value;

        emit RouletteBankDeposit(_msgSender(), msg.value);
    }

    function withdrawFromBank(
        address _to
    ) public onlyRole(ROULETTE_LIQUIDITY_ROLE) {
        (uint withdrawAmount, uint fees) = getBankWithdrawable(_msgSender());

        require(withdrawAmount > 0);

        bankDeposits = bankDeposits - userToDeposits[_msgSender()];
        userToDeposits[_msgSender()] = 0;
        bankFees += fees;

        payable(_to).transfer(withdrawAmount);

        emit RouletteBankWithdraw(_msgSender(), withdrawAmount, fees);
    }

    ////////////////////////
    ///     FALLBACK     ///
    ////////////////////////

    receive() external payable {}
}

