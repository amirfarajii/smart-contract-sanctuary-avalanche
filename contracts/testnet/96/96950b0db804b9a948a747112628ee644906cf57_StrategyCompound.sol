import {SafeERC20} from "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import {IERC20} from "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "contracts/vault/interfaces/IComet.sol";
import "contracts/vault/strategies/BaseStrategy.sol";

contract StrategyCompound is BaseStrategy {
    using SafeERC20 for IERC20;

    address public cometAddress;

    event Deposit(
        address wantAddress,
        uint256 amountReceived,
        uint256 amountDeposited
    );
    event Withdraw(
        address wantAddress,
        uint256 amountRequested,
        uint256 amountWithdrawn
    );

    function initialize(
        address governor_,
        address keeper_,
        address wantAddress_,
        address cometAddress_,
        uint256 withdrawFee_
    ) public initializer {
        if (cometAddress_ == address(0)) revert CannotBeZeroAddress();

        __BaseStrategy_init(governor_, keeper_, wantAddress_, withdrawFee_);
        cometAddress = cometAddress_;

        IERC20(wantAddress_).safeApprove(cometAddress_, type(uint256).max);
    }

    function _supply(uint256 amount_) internal {
        IComet(cometAddress).supply(wantAddress, amount_);
    }

    function _removeSupply(uint256 _amount) internal {
        IComet(cometAddress).withdraw(wantAddress, _amount);
    }

    function deposit(uint256 _wantAmt) external onlyVault returns (uint256) {
        if (isDepositPaused()) revert Paused();

        IERC20(wantAddress).safeTransferFrom(
            address(msg.sender),
            address(this),
            _wantAmt
        );
        uint256 before = wantLockedTotal();
        _supply(_wantAmt);

        uint256 balTotal = wantLockedTotal();
        if (balTotal < before) {
            balTotal = before;
        }

        uint256 diff = balTotal - (before);
        if (diff > _wantAmt) {
            diff = _wantAmt;
        }

        emit Deposit(wantAddress, _wantAmt, diff);

        return diff;
    }

    function earn() external {
        if (isEarnPaused()) revert Paused();

        _removeSupply(type(uint256).max);
        _supply(wantLockedTotal());
    }

    function withdraw(uint256 _wantAmt) external onlyVault returns (uint256) {
        if (isWithdrawPaused()) revert Paused();

        _wantAmt =
            (_wantAmt * (MAX_WITHDRAW_FEE - withdrawFee)) /
            MAX_WITHDRAW_FEE;

        uint256 wantBal;
        if (_wantAmt > wantLockedInHere()) {
            _removeSupply(_wantAmt - (wantLockedInHere()));
        }

        wantBal = IERC20(wantAddress).balanceOf(address(this));

        if (wantBal > _wantAmt) {
            wantBal = _wantAmt;
        }

        IERC20(wantAddress).safeTransfer(vaultAddress, wantBal);

        emit Withdraw(wantAddress, _wantAmt, wantBal);

        return wantBal;
    }

    function wantLockedTotal() public view returns (uint256) {
        return
            wantLockedInHere() + IComet(cometAddress).balanceOf(address(this));
    }

    function wantLockedInHere() public view returns (uint256) {
        uint256 wantBal = IERC20(wantAddress).balanceOf(address(this));
        return wantBal;
    }

    function inCaseTokensGetStuck(
        address _token,
        uint256 _amount,
        address _to
    ) external {
        if (msg.sender != governor) revert Unauthorized();
        if (_token == wantAddress) revert Unsafe();

        IERC20(_token).safeTransfer(_to, _amount);
    }

    function updateStrategy() external {}

    fallback() external {}
}

