import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "contracts/ColumbusMath.sol";

abstract contract BaseStrategy is Initializable, ColumbusMath {
    /// @notice The admin of the protocol
    address public governor;

    /// @notice The account which may trigger pauses
    address public keeper;

    /// @notice The vault address
    address public vaultAddress;

    /// @notice Need token address
    address public wantAddress;

    /// @notice Block height of the last earn action
    uint256 public lastEarnBlock;

    uint16 public withdrawFee;
    uint8 internal pauseFlags;

    uint16 public constant MAX_WITHDRAW_FEE = 10000;
    /// @dev Offsets for specific actions in the pause flag bit array
    uint8 internal constant PAUSE_DEPOSIT_OFFSET = 0;
    uint8 internal constant PAUSE_WITHDRAW_OFFSET = 1;
    uint8 internal constant PAUSE_EARN_OFFSET = 2;

    error Unauthorized();
    error Paused();
    error NotVault();
    error CannotBeZeroAddress();
    error Unsafe();
    error BadMaximum();

    /// @notice Event emitted when an action is paused/unpaused
    event PauseAction(bool depositPaused, bool withdrawPaused, bool earnPaused);
    event NewWithdrawFee(uint16 withdrawFee);
    event NewGovernor(address governor);
    event NewKeeper(address keeper);
    event NewVault(address vault);

    function __BaseStrategy_init(
        address governor_,
        address keeper_,
        address wantAddress_,
        uint256 withdrawFee_
    ) internal onlyInitializing {
        if (wantAddress_ == address(0)) revert CannotBeZeroAddress();
        if (governor_ == address(0)) revert CannotBeZeroAddress();
        if (keeper_ == address(0)) revert CannotBeZeroAddress();

        wantAddress = wantAddress_;
        governor = governor_;
        keeper = keeper_;

        pauseFlags = uint8(0);

        if (withdrawFee_ > MAX_WITHDRAW_FEE) revert BadMaximum();
        withdrawFee = safe16(withdrawFee_);
    }

    modifier onlyVault() {
        if (vaultAddress != msg.sender) revert NotVault();
        _;
    }

    modifier onlyGovernor() {
        if (msg.sender != governor) revert Unauthorized();
        _;
    }

    modifier checkZeroAddress(address address_) {
        if (address_ == address(0)) revert CannotBeZeroAddress();
        _;
    }

    function setGovernor(address governor_)
        public
        onlyGovernor
        checkZeroAddress(governor_)
    {
        governor = governor_;

        emit NewGovernor(governor);
    }

    function setKeeper(address keeper_)
        public
        onlyGovernor
        checkZeroAddress(keeper_)
    {
        keeper = keeper_;

        emit NewKeeper(keeper);
    }

    function setVault(address vault_)
        external
        onlyGovernor
        checkZeroAddress(vault_)
    {
        vaultAddress = vault_;

        emit NewVault(vault_);
    }

    function setWithdrawFee(uint256 withdrawFee_) public onlyGovernor {
        if (withdrawFee_ > MAX_WITHDRAW_FEE) revert BadMaximum();
        withdrawFee = safe16(withdrawFee_);

        emit NewWithdrawFee(withdrawFee);
    }

    function pause(
        bool depositPaused,
        bool withdrawPaused,
        bool earnPaused
    ) external {
        if (msg.sender != governor && msg.sender != keeper)
            revert Unauthorized();

        pauseFlags =
            uint8(0) |
            (toUInt8(depositPaused) << PAUSE_DEPOSIT_OFFSET) |
            (toUInt8(withdrawPaused) << PAUSE_WITHDRAW_OFFSET) |
            (toUInt8(earnPaused) << PAUSE_EARN_OFFSET);

        emit PauseAction(depositPaused, withdrawPaused, earnPaused);
    }

    /**
     * @return Whether or not deposit actions are paused
     */
    function isDepositPaused() public view returns (bool) {
        return toBool(pauseFlags & (uint8(1) << PAUSE_DEPOSIT_OFFSET));
    }

    /**
     * @return Whether or not withdraw actions are paused
     */
    function isWithdrawPaused() public view returns (bool) {
        return toBool(pauseFlags & (uint8(1) << PAUSE_WITHDRAW_OFFSET));
    }

    /**
     * @return Whether or not earn actions are paused
     */
    function isEarnPaused() public view returns (bool) {
        return toBool(pauseFlags & (uint8(1) << PAUSE_EARN_OFFSET));
    }
}

