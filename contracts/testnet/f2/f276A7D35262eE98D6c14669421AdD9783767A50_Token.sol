contract TokenStorage {

    /// @dev RESTRICTION CODES AND MESSAGES
    /// @notice transfer restriction codes 0-3 are reserved by default implementation and should be inherited the same by children
    uint8 public constant SUCCESS_CODE = 0;
    uint8 public constant FROZEN_ACCOUNT_CODE = 1;
    uint8 public constant PARTIAL_FREEZE_CODE = 2;
    uint8 public constant NON_WHITELIST_CODE = 3;

    string public constant SUCCESS_MESSAGE = "SUCCESS";
    string public constant FROZEN_ACCOUNT_ERROR = "ILLEGAL_TRANSFER_ACCOUNT_FROZEN";
    string public constant PARTIAL_FREEZE_ERROR = "ILLEGAL_TRANSFER_PARTIAL_FREEZE";
    string public constant NON_WHITELIST_ERROR = "RECEIVER_NOT_WHITELISTED";

    /// @dev ERC20 basic variables
    mapping(address => uint256) internal _balances;
    mapping(address => mapping(address => uint256)) internal _allowances;
    uint256 internal _totalSupply;

    /// @dev Token information
    string internal tokenName;
    string internal tokenSymbol;
    uint8 internal tokenDecimals;
    address internal tokenOnchainID;
    string internal constant TOKEN_VERSION = '3.5.1';
    string public disclaimer;
    uint256 public valuation;
    uint256 public maxSupply;

    /// @dev Variables of freeze and pause functions
    mapping(address => bool) internal frozen;
    mapping(address => uint256) internal frozenTokens;

    bool internal tokenPaused = false;

    /// @dev Identity Registry contract used by the onchain validator system
    IIdentityRegistry internal tokenIdentityRegistry;

    /// @dev Compliance contract linked to the onchain validator system
    ICompliance internal tokenCompliance;
}

