    /**
     * @notice Public facing, (1404 compliant) function that does necessary transfer checks 
     *         (local and on compliance contract) and returns a uint8 numeric code value 
     *         denoting the type of restriction that is enforced on the transfer.  The function
     *         will return a a single code value.  If there are multiple restrictions for a transfer,
     *         this function will return a differnent code once the first one is resolved until there are
     *         no more transfer restrictions (which are defined here and on the compliance contract, see
     *         ICompliance::checkTransferCompliance())
     * 
     * @dev the arguments passed to this function should be in the same form as the ERC transfer 
     *      standard of _from, _to, _value.  Restriction checks should be done for any functionalities
     *      that are added on top of the baseline ERC-20 checks such as allowance, which are done
     *      by default on the token implementation. (see /token/Token.sol)
     * 
     * @return restrictionCode the restriction code that is triggered. SUCCESS will be denoted as code 0
     */
    function detectTransferRestriction (address _from, address _to, uint256 _value) public override(ERC1404, IToken) view returns (uint8 restrictionCode) {
        if (!tokenIdentityRegistry.isVerified(_to)) {
            return NON_WHITELIST_CODE;
        } 
        if (frozen[_from] || frozen[_to]) {
            return FROZEN_ACCOUNT_CODE;
        } 
        if (frozenTokens[_from] > 0 ) {
            uint256 availableTokens = balanceOf(_from) - frozenTokens[_from];
            if(availableTokens < _value) {
                return PARTIAL_FREEZE_CODE;
            }
        }
        return tokenCompliance.checkTransferCompliance(_from, _to, _value);
    }

    /** 
     * @notice  public facing (ERC1404 compliant) function to check any specific restriction messages that may be related to this contract
     *          if a restriction code is not recognized, message will be returned as "ERROR UNKNOWN"
     * 
     * @dev any additional transfer checks or messages should not be added to the token implementation but rather to the compliance contract
     *      where any additional transfer checks will be defined and checked for. (See ICompliance.sol)
     */
    function messageForTransferRestriction (uint8 _restrictionCode) public override(ERC1404, IToken) view returns (string memory message) {
        if(_restrictionCode == SUCCESS_CODE) {
            return SUCCESS_MESSAGE;
        } else {
            if(_restrictionCode == NON_WHITELIST_CODE) {
                return NON_WHITELIST_ERROR;
            }
            if(_restrictionCode == FROZEN_ACCOUNT_CODE) {
                return FROZEN_ACCOUNT_ERROR;
            }
            if(_restrictionCode == PARTIAL_FREEZE_CODE) {
                return PARTIAL_FREEZE_ERROR;
            }
            return tokenCompliance.restrictionMessage(_restrictionCode);
        }
    }

    /**
     * @dev override IToken and AgentRoleUpgradeable
     */
    function isAgent(address _agent) public override (IToken, AgentRoleUpgradeable) view returns (bool) {
        return super.isAgent(_agent);
    }

    function timestamp() public view returns(uint256) {
        return block.timestamp;
    }
    
    function updateValuation(address _apiConsumer) public onlyAgent{
        valuation = APIConsumer(_apiConsumer).valuation();
    }

