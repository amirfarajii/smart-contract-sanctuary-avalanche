        uint8 v,
        bytes32 r,
        bytes32 s
    ) internal pure returns (bytes memory signature) {
        signature = new bytes(65);
        assembly {
            mstore8(add(signature, 32), r)
            mstore(add(signature, 33), s)
            mstore(add(signature, 65), v)
