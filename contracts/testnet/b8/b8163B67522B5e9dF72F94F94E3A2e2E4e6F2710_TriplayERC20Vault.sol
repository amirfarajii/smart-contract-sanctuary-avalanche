pragma solidity 0.8.17;


contract TriplayPolicy is Authorization {
    using ECDSA for bytes32;

    uint256 public withdrawThreshold;
    uint256 public minBotSignatures;
    address public operator;
    mapping(address => bool) public isSignerBot;
    mapping(address => mapping(bytes32 => bool)) public usedNonce; //usedNonce[msg.sender][paramsHash] = bool

    event SetSignerBots(address indexed sender, address[] signers, bool allowed);

    constructor(
        address _operator,
        uint256 _withdrawThreshold,
        uint256 _minBotSignatures
    ) {
        operator = _operator;
        withdrawThreshold = _withdrawThreshold;
        minBotSignatures = _minBotSignatures;
    }

    function getParams() 
        external 
        view 
        returns (
            uint256,
            uint256
        ) 
    {
        return (withdrawThreshold, minBotSignatures);
    }

    function setSignerBots(address[] memory signers, bool allowed) external onlyOwner {
        for (uint256 i = 0; i < signers.length; i++) {
            isSignerBot[signers[i]] = allowed;
        }    
        emit SetSignerBots(msg.sender, signers, allowed);
    }

    function verifyWithdrawERC20(
        uint256 amount,
        bytes[] calldata signatures, 
        bytes32 paramsHash
    ) external {
        _verify(signatures, paramsHash, amount > withdrawThreshold);
    }

    function verifyUnstakeNFT(
        bytes[] calldata signatures, 
        bytes32 paramsHash
    ) external {
        _verify(signatures, paramsHash, false);
    }

    function verifySetMerkleRoot(
        bytes[] calldata signatures, 
        bytes32 paramsHash
    ) external {
        _verify(signatures, paramsHash, false);
    }

    function verifyShutDown(
        bytes[] calldata signatures, 
        bytes32 paramsHash       
    ) external {
        _verify(signatures, paramsHash, false);
    }

    function verifyResume(
        bytes[] calldata signatures, 
        bytes32 paramsHash       
    ) external {
        _verify(signatures, paramsHash, false);
    }

    function _verify(
        bytes[] calldata signatures, 
        bytes32 paramsHash,
        bool operatorNeeded
    ) internal {
        require(!usedNonce[msg.sender][paramsHash], "nonce used");
        usedNonce[msg.sender][paramsHash] = true;
        uint256 length = signatures.length;
        uint256 botSignatureCount;
        bool isOperatorSigned;
        address lastSigner;
        for (uint256 i = 0; i < length; i++) {
            address signer = ECDSA.recover(paramsHash, signatures[i]);
            require(signer != address(0), "Invalid signer");    
            if (signer > lastSigner) {   
                if (signer == operator) isOperatorSigned = true;
                else {
                    require(isSignerBot[signer], "Not a signer bot");
                    botSignatureCount++;
                }
                lastSigner = signer;
            }
        }    
        require(botSignatureCount >= minBotSignatures, "Insufficient number of bot signatures");
        if (operatorNeeded) require(isOperatorSigned, "Operator not signed");
    }
}


