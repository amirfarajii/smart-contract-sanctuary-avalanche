pragma solidity 0.8.17;





contract TriplayERC20Vault is TriplayVault {
    using SafeERC20 for IERC20;

    bytes32 private constant WITHDRAW_TYPE_HASH = keccak256("Withdraw(uint256 requestId,address player,uint256 amount)");
    IERC20 public immutable token;
    mapping(address => uint256) public cumulativeWithdrawal; //cumulativeWithdrawal[player] = uint256
    mapping(address => uint256) public cumulativeDeposit; //cumulativeDeposit[player] = uint256
    mapping(address => mapping(uint256 => bool)) public usedRequestIds; //usedRequestIds[msg.sender][requestId] = bool

    event Deposit(address indexed player, uint256 amount);
    event Withdraw(address indexed player, uint256 requestId, uint256 amount, uint256 newBalance);
    event TransferToTreasury(address indexed sender, uint256 amount);

    constructor(
        IERC20 _token, 
        address _treasury,
        TriplayPolicy _policy
    ) TriplayVault(_treasury, _policy) {
        token = _token;
    }

    function deposit(uint256 amount) external nonReentrant whenNotFullShutDown whenNotPaused {
        require(amount > 0, "amount = 0");
        amount = _transferFrom(amount);
        cumulativeDeposit[msg.sender] += amount;
        emit Deposit(msg.sender, amount);
    }

    function withdraw(
        uint256 requestId,
        uint256 amount,
        bytes32[] calldata proof, 
        uint256 cumulativeGain,
        uint256 cumulativeSpend,
        bytes[] calldata signatures
    ) external nonReentrant whenNotFullShutDown whenNotPaused {
        require(amount > 0, "amount = 0");
        require(!usedRequestIds[msg.sender][requestId], "requestId already used");
        uint256 currentBalance = cumulativeGain - cumulativeSpend - cumulativeWithdrawal[msg.sender];
        require(amount <= currentBalance, "insufficient balance");
        require(
            MerkleProof.verify(proof, merkleRoot, keccak256(
                abi.encodePacked(               
                    msg.sender, 
                    cumulativeGain,
                    cumulativeSpend
                )
            ))
        , "merkle proof failed");
        bytes32 paramsHash = hashWithdrawParams(requestId, msg.sender, amount);
        policy.verifyWithdrawERC20(amount, signatures, paramsHash);
        cumulativeWithdrawal[msg.sender] += amount;
        usedRequestIds[msg.sender][requestId] = true;
        token.safeTransfer(msg.sender, amount);
        emit Withdraw(msg.sender, requestId, amount, currentBalance - amount);
    }

    function transferToTreasury(address treasury, uint256 amount) external whenNotFullShutDown auth {
        require(amount > 0, "amount = 0");
        require(isTreasury[treasury], "not a treasury");
        token.safeTransfer(treasury, amount);
        emit TransferToTreasury(msg.sender, amount);
    }

    function hashWithdrawParams(
        uint256 requestId,
        address player,
        uint256 amount
    ) internal view returns (bytes32) {
        return _hashTypedDataV4(keccak256(abi.encode(
            WITHDRAW_TYPE_HASH,
            requestId,
            player,
            amount
        )));
    }

    function _transferFrom(uint amount) internal returns (uint256 balance) {
        balance = token.balanceOf(address(this));
        token.safeTransferFrom(msg.sender, address(this), amount);
        balance = token.balanceOf(address(this)) - balance;
    }
}