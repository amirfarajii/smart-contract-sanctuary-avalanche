import "@openzeppelin/contracts/proxy/ERC1967/ERC1967Proxy.sol";
import "./SmartLZBaseNonUpgradeable.sol";

    /**
    * @author DeCommas team
    * @title Implementation of
    * @dev Originally based on code by Pillardev: https://github.com/Pillardevelopment
    * @dev Original idea on architecture by Loggy: https://miro.com/app/board/uXjVOZbZQQI=/?fromRedirect=1
    */
contract BBFabric is SmartLZBaseNonUpgradeable {

    /// id - serial number of initiate basic block
    /// implementation -  address (source code and logic)
    /// proxy - address of ERC1967 interface with storage and state
    struct BaseBlockData {
        uint256 id;
        address implement;
        address proxy;
    }


    /// array save data about basic blocks of current EVM network
    BaseBlockData[] private _allBlockInChain;

    event NewBbCreated(uint256 strategyId, address indexed implementation, address indexed proxy);
    event UpgradeBbImplementation(uint256 strategyId, address indexed _newImplementation, address indexed proxy);

    constructor(uint16 nativeChain, address nativeLZEndpoint, address actionPool, uint16 actionPoolNativeId) {
        _nativeChain = nativeChain;
        _nativeLZEndpoint = nativeLZEndpoint;
        remotes[actionPoolNativeId] = _addressToBytes(actionPool);
        _actionPool = actionPool;
        _transferOwnership(_msgSender());
    }


    /**
    * @notice LayerZeroEndpoint interface technical function, see more:
    *       (https://layerzero.gitbook.io/docs/guides/master/receive-messages)
    * @param srcChainId -  source sender ID in LayerZero, see more:
    *       (https://layerzero.gitbook.io/docs/technical-reference/testnet/testnet-addresses)
    * @param srcAddress - source address of sender
    * @param payload - destination flag + func params encoded in bytes.
    * @dev - use only LayerZeroEndpoint
    */
    function lzReceive(
        uint16 srcChainId,
        bytes memory srcAddress,
        uint64, /*_nonce*/
        bytes memory payload
    ) external override {
        // v1
        (uint256 flag, bytes memory funcData) = abi.decode(payload, (uint256, bytes));
        if(flag == 10) {
            (uint256[] memory strategyIds,
            address[] memory implementations,
            bytes[] memory data) = abi.decode(funcData, (uint256[], address[], bytes[]));
                for(uint i = 0; i < implementations.length; i++) {
                    _initNewProxy(strategyIds[i], implementations[i], data[i]);
                }
            }
            else if (flag == 11) {
            (uint256[] memory strategyIds,
            address[] memory proxies,
            address[] memory implementations) = abi.decode(funcData, (uint256[], address[], address[]));
                for(uint i = 0; i < proxies.length; i++) {
                    _upgradeProxyImplementation(strategyIds[i], proxies[i], implementations[i]);
                }
            }
            else {
                revert("BBFabric:incorrect flag");
            }
        /* // v2
        funcSignature = abi.encodeWirthSelector(bytes4(keccak256(bytes("initialize(bytes/upgradeTo)"))), funcData);
        (bool success, bytes memory returnData) = address(this).call(payload); //funcSignature
        require(success, "BBFabric:internal call failed"); */
    }


    // DEBUG
    function createNewBb(uint256 strategyId, address implementation, bytes memory data) external {
        _initNewProxy(strategyId, implementation,  data);
    }

    function upgradeImplementation(uint256 strategyId, address proxy, address newImplementation) external {
        _upgradeProxyImplementation(strategyId, proxy, newImplementation);
    }
    // DEBUG


    function getBbData(uint256 allBlockInChainId) external view returns(BaseBlockData memory baseBlockData) {
        baseBlockData = _allBlockInChain[allBlockInChainId];
    }


    function allBbData() external view returns(BaseBlockData[] memory) {
        return _allBlockInChain;
    }


    /**
    * @param strategyId - strategy number by which it will be identified
    * @param implementation - address of Building block contract proxy's source code
    * @param data - data for  initialize function in Building block contract
    */
    function _initNewProxy(uint256 strategyId, address implementation, bytes memory data) private {
        ERC1967Proxy proxy = new ERC1967Proxy(implementation, data);
        bytes memory initializeData = abi.encodeWithSelector(bytes4(keccak256(bytes("initialize(bytes)"))), data);
        (bool success, bytes memory returnData) = address(proxy).call(initializeData);

        BaseBlockData memory newBBData = BaseBlockData({id: strategyId, implement: implementation, proxy: address(proxy)});
        _allBlockInChain.push(newBBData);
        emit NewBbCreated(strategyId, implementation, address(proxy));
    }


    /**
    * @param strategyId - strategy number by which it will be identified
    * @param proxy - address of proxy's Building block contract, have storage and state
    * @param newImplementation - address of modified Building block contract proxy's source code
    */
    function _upgradeProxyImplementation(uint256 strategyId, address proxy, address newImplementation) private {
        bytes memory upgradeData = abi.encodeWithSelector(bytes4(keccak256(bytes("upgradeTo(address)"))),
                                                                                newImplementation);
        (bool success, bytes memory returnData) = address(proxy).call(upgradeData);
        emit UpgradeBbImplementation(strategyId, newImplementation, proxy);
    }
 }

