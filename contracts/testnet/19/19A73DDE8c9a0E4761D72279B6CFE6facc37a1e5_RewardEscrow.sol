// Inheritance
import "./Owned.sol";
import "./interfaces/IRewardEscrow.sol";

// Libraries
import "./SafeDecimalMath.sol";

// Internal references
import "./interfaces/IERC20.sol";
import "./interfaces/IFeePool.sol";
