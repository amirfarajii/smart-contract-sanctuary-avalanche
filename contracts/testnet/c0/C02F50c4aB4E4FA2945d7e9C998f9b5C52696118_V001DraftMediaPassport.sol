    require(passports[tokenId].author != address(0), "no passport found");
    // draft is not allowed
    require(passports[tokenId].status != TStatus.DRAFT, "passport is not accepted");    

    require(signature.length > 0, "empty signature");
    // author, entity, locale, url
    bytes32 _hash = keccak256(abi.encodePacked(passports[tokenId].author, passports[tokenId].entityCode, locale, IDraftResourceStore(resources).getResource(tokenId, locale), address(this)));

