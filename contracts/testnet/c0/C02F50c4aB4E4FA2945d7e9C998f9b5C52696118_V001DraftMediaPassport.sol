    require(_to != address(0), "user is zero address");
    require(bytes(_code).length > 0, "empty code");
    require(bytes(_uri).length > 0, "empty metadata");
  //  require(_issuer != _to, "issue and received the same");
    uint256 _tokenId = _generateTokenId(_to, _code);
    // issued and accepted
    require(!_exists(_tokenId), "already created & accepted");
    // just issued but not accepted
    require(passports[_tokenId].author == address(0), "already issued");

    TPassport memory _passport;
    _passport.issuer = _issuer;
    _passport.author = _to;
    _passport.metadataUri = _uri;
    _passport.createdAt = block.timestamp;
    _passport.status = TStatus.DRAFT;
    passports[_tokenId] = _passport;
    passports[_tokenId].locale = _locale; 

    return _tokenId;
  } 

