      require(_exists(tokenId), "invalid token ID");
      return passports[tokenId].metadataUri;
  }

  function details(uint256 tokenId) external override virtual view returns (TPassport memory){
    require(passports[tokenId].author != address(0), "no passport");
    return passports[tokenId];
  }
       	       
