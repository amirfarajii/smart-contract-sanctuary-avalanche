    bytes32 _hash = keccak256(abi.encodePacked(user, code, address(this)));
    uint256 _tokenId = uint256(_hash);

    require(!_exists(_tokenId), "already issued & accepted");
    // just issued but not accepted
    require(passports[_tokenId].author == address(0), "already issued");
    return _tokenId;
