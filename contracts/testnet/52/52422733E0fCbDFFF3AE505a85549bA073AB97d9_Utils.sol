pragma solidity 0.8.17;

import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "./TransferHelper.sol";
import "./IEumlet.sol";

contract Utils is ReentrancyGuard {
    address public constant NATIVE = 0xEeeeeEeeeEeEeeEeEeEeeEEEeeeeEeeeeeeeEEeE;
    address public immutable signer;
    IEumlet public immutable eumlet;
    mapping(address => mapping(uint256 => bytes)) public addParams;
    mapping(address => uint256) public ids;

    mapping(address => mapping(uint256 => Proposal)) private proposals;

    struct Proposal {
        address token;
        address[] accounts;
        uint256[] amounts;
        uint256 totalAmount;
    }

    event CreateProposal(address creator, uint256 id, uint256 kind);
    event Approve(address creator, uint256 id);
    event Reject(address creator, uint256 id);

    constructor(IEumlet _eumlet, address _signer) {
        require(
            address(_eumlet) != address(0) && _signer != address(0),
            "Zero address"
        );
        signer = _signer;
        eumlet = _eumlet;
    }

    function createMultisend(Proposal calldata multisend) external payable {
        _createProposal(multisend, new bytes(0), 0);
    }

    function createMultistream(
        Proposal calldata stream,
        uint128[3] calldata params
    ) external payable {
        require(
            params[0] > block.timestamp && params[1] > 0 && params[2] > 0,
            "Wrong params"
        );
        _createProposal(stream, abi.encodePacked(params), 1);
    }

    function createDeferred(Proposal calldata deferred, uint256 unlockTimestamp)
        external
        payable
    {
        require(unlockTimestamp > block.timestamp, "Wrong unlock time");
        _createProposal(deferred, abi.encodePacked(unlockTimestamp), 2);
    }

    function approve(
        address creator,
        uint256 proposalId,
        bytes calldata signature
    ) external nonReentrant {
        Proposal storage proposal = proposals[creator][proposalId];
        require(proposal.totalAmount > 0, "Already approved or not exist yet");
        require(
            signer ==
                ECDSA.recover(
                    ECDSA.toEthSignedMessageHash(
                        keccak256(abi.encodePacked(creator, msg.sender, proposalId))
                    ),
                    signature
                ),
            "Incorrect signature"
        );
        uint256 sended;
        if (proposal.token != NATIVE) {
            TransferHelper.safeTransfer(
                proposal.token,
                address(eumlet),
                proposal.totalAmount
            );
        } else {
            sended = proposal.totalAmount;
        }
        eumlet.approveProposal{value: sended}(
            creator,
            proposal.token,
            proposal.accounts,
            proposal.amounts,
            proposal.totalAmount,
            addParams[creator][proposalId]
        );
        delete proposals[creator][proposalId];
        delete addParams[creator][proposalId];
        emit Approve(creator, proposalId);
    }

    function reject(
        address creator,
        uint256 proposalId,
        bytes calldata signature
    ) external nonReentrant {
        Proposal storage proposal = proposals[creator][proposalId];
        require(proposal.totalAmount > 0, "Already rejected or not exist yet");
        require(
            signer ==
                ECDSA.recover(
                    ECDSA.toEthSignedMessageHash(
                        keccak256(abi.encodePacked(creator, msg.sender, proposalId))
                    ),
                    signature
                ),
            "Incorrect signature"
        );
        _sendTokens(proposal.token, creator, proposal.totalAmount);
        delete proposals[creator][proposalId];
        delete addParams[creator][proposalId];
        emit Reject(creator, proposalId);
    }

    function getProposal(address creator, uint256 id)
        external
        view
        returns (
            address token,
            address[] memory accounts,
            uint256[] memory amounts,
            uint256 totalAmount
        )
    {
        Proposal memory proposal = proposals[creator][id];
        token = proposal.token;
        accounts = proposal.accounts;
        amounts = proposal.amounts;
        totalAmount = proposal.totalAmount;
    }

    function _createProposal(Proposal calldata proposal, bytes memory data, uint256 kind)
        internal
    {
        require(proposal.totalAmount > 0, "Zero total amount");
        require(eumlet.tokens(proposal.token) == 1, "Unsupported token");
        _collectTokens(proposal.token, proposal.totalAmount);
        uint256 id = ids[msg.sender]++;
        proposals[msg.sender][id] = proposal;
        addParams[msg.sender][id] = data;
        emit CreateProposal(msg.sender, id, kind);
    }

    function _collectTokens(address token, uint256 totalAmount) internal {
        if (token == NATIVE) {
            require(msg.value == totalAmount, "Wrong amount sended");
        } else {
            require(msg.value == 0, "Native sended");
            TransferHelper.safeTransferFrom(
                token,
                msg.sender,
                address(this),
                totalAmount
            );
        }
    }

    function _sendTokens(
        address token,
        address to,
        uint256 amount
    ) internal {
        if (token == NATIVE) {
            TransferHelper.safeTransferETH(to, amount);
        } else {
            TransferHelper.safeTransfer(token, to, amount);
        }
    }
}

