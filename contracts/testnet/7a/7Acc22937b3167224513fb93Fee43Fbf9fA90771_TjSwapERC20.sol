contract TjSwapERC20 {
   // using SafeERC20 for IERC20;

    address private constant SWAP_ROUTER =
       0xd7f655E3376cE2D7A2b08fF01Eb3B1023191A901;
    address private constant SWAP_ROUTER_02 =
        0x68b3465833fb72A70ecDF485E0e4C7bD8665Fc45;

    IJoeRouter02 public immutable swapRouter = IJoeRouter02(SWAP_ROUTER);

    function safeTransferWithApprove(
        uint256 amountIn,
        address routerAddress,
        IERC20 tokenIn
    ) internal {
        tokenIn.approve(routerAddress, amountIn);
        tokenIn.transferFrom(msg.sender, address(this), amountIn);
    }

    function swapExactInputSingle(
        uint256 amountIn,
        uint256 amountOutMinimum,
        IERC20 tokenIn,
        IERC20 tokenOut
    ) external returns (uint256 amountOut) {
        safeTransferWithApprove(amountIn, address(swapRouter), tokenIn);
        address[] memory path = new address[](2);
        path[0] = address(tokenIn);
        path[1] = address(tokenOut);
        
       uint[] memory amounts = swapRouter.swapExactTokensForTokens(amountIn, amountOutMinimum, path, msg.sender, block.timestamp + 120);
       return amounts[1];
    }
}

