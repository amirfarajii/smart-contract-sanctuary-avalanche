            keccak256("Offer(address taker,address collection,uint256 tokenId,uint256 amount,uint256 bidPrice,uint256 expiresAt)"),
            offer.taker,
            offer.collection,
            offer.tokenId,
            offer.amount,
            offer.bidPrice,
            offer.expiresAt
