import {CreateParams, Phase, Allocation} from "../structs/erc721/ERC721Structs.sol";
import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import "@openzeppelin/contracts/utils/Strings.sol";

contract ONFT721A is ONFT721Core, IONFT721A, ERC721A {
    using Strings for uint256;

    event TokenMinted(address collAddr, address owner, uint256 tokenId, uint256 quantity);

    modifier isBeforeMint() {
        uint256 _minted = _totalMinted();
        require((_minted == 0 || (_minted - preMintedToPlatform - preMintedToTeam) == 0));
        _;
    }

    address private constant TREASURY = 0x61104fBe07ecc735D8d84422c7f045f8d29DBf15;

    // Basic
    string public collectionName;
    uint256 public override createdAt;
    uint256 public override maxSupply;
    address public override creator;
    string public collectionURI;
    string public _notRevealedURI;
    address public dropsManager;
    bool public isZeroIndexed;
    string public tokensURI;
    // Phases
    uint16 public phasesCount;
    mapping(uint256 => Phase) public phases; // ID => Phase
    mapping(uint256 => mapping(address => uint256)) public phaseMintedCount; // Phase ID => minted
    // Allocations
    Allocation[] public allocations;
    uint256 private preMintedToPlatform;
    uint256 private preMintedToTeam;

    constructor(
        string memory _symbol,
        CreateParams memory params,
        address _creator,
        address _dropsManagerAddress,
        address _lzEndpoint,
        uint256 _minGasToTransfer
    ) ERC721A(params.name, _symbol) ONFT721Core(_minGasToTransfer, _lzEndpoint) {
        dropsManager = _dropsManagerAddress;
        creator = _creator;
        tokensURI = params.tokensURI;
        maxSupply = params.maxSupply;
        createdAt = block.timestamp;
        collectionName = params.name;
        collectionURI = params.uri;
        isZeroIndexed = params.isZeroIndexed;
        _setNextTokenId(isZeroIndexed ? 0 : 1);
        _transferOwnership(creator);
    }

    function _baseURI() internal pure returns (string memory) {
        return "ipfs://";
    }

    function contractURI() public view returns (string memory) {
        return string(abi.encodePacked(_baseURI(), collectionURI));
    }

    function tokenURI(uint256 tokenId) public view returns (string memory) {
        if (bytes(_notRevealedURI).length > 0) {
            return _notRevealedURI;
        }

        return string(abi.encodePacked(_baseURI(), tokensURI, "/", tokenId.toString(), ".json"));
    }

    function mint(address _owner, uint256 _quantity, bytes32[] memory _merkleProof) external override {
        require(_msgSender() == dropsManager);
        _validateMint(_quantity, _owner, _merkleProof);
        (,uint16 phaseId) = getCurrentPhase();
        phaseMintedCount[phaseId][_owner] += _quantity;
        _mint(_owner, _quantity);
        emit TokenMinted(address(this), _owner, (_nextTokenId() - 1), _quantity);
    }

    function _validateMint(uint256 _quantity, address _owner, bytes32[] memory _merkleProof) view internal {
        uint256 _newTotalMinted = _totalMinted() + _quantity;
        if (maxSupply > 0) require(maxSupply >= _newTotalMinted);
        require(isAllowed(_owner, _quantity, _merkleProof));
    }

    function _validateDates(uint256 from, uint256 to) internal view {
        if (from > 0) require(from >= (block.timestamp - 1 days));
        if (to > 0) require(to > from && to > block.timestamp);
    }

    function setNotRevealedURI(string memory _uri) external isBeforeMint onlyOwner {
        _notRevealedURI = _uri;
    }

    function reveal() external {
        require(_msgSender() == owner() || _msgSender() == TREASURY);
        _notRevealedURI = "";
    }

    function totalMinted() external view override returns (uint256) {
        return _totalMinted();
    }

    function mintPrice() public view override returns (uint256) {
        (Phase memory phase, uint16 phaseId) = getCurrentPhase();

        return phaseId > 0 ? phase.price : 0;
    }

    function getCurrentPhase() public view returns (Phase memory, uint16) {
        uint16 phaseId = 0;
        Phase memory phase = phases[phaseId];

        for (uint16 i = 1; i <= phasesCount; i++) {
            Phase memory _phase = phases[i];

            if (_phase.from <= block.timestamp) {
                phaseId = i;
                phase = _phase;
            } else {
                break;
            }
        }

        return (phase, phaseId);
    }

    function isAllowed(address _account, uint256 _quantity, bytes32[] memory _merkleProof) public view returns (bool) {
        (Phase memory phase, uint16 phaseId) = getCurrentPhase();
        if (phaseId == 0) return false;
        if (phase.maxPerAddress > 0 && phaseMintedCount[phaseId][_account] + _quantity > phase.maxPerAddress) {
            return false;
        }
        if (phase.merkleRoot.length == 0) return true;
        bytes32 leaf = keccak256(abi.encodePacked(_account));

        return MerkleProof.verify(_merkleProof, phase.merkleRoot, leaf);
    }

    function addPhase(
        uint256 _from,
        bytes32 _merkleRoot,
        uint256 _maxPerAddress,
        uint256 _price
    ) external onlyOwner {
        require(_from > 0);
        Phase memory prevPhase = phases[phasesCount];
        phasesCount++;
        require(phasesCount == 1 || prevPhase.from < _from);

        phases[phasesCount] = Phase(_from, _maxPerAddress, _price, _merkleRoot);
    }

    function preMintToTeam(uint256 _quantity) external isBeforeMint {
        require(_msgSender() == creator);
        preMintedToTeam += _quantity;
        _mint(creator, _quantity);
    }

    function preMintToPlatform() external {
        require(preMintedToPlatform == 0);
        uint256 _quantity = maxSupply < 10000 ? (maxSupply < 100 ? 1 : 3) : 5;
        preMintedToPlatform = _quantity;
        _mint(TREASURY, _quantity);
    }

    function addAllocation(Allocation calldata _allocation) external onlyOwner {
        require(_allocation.percentage > 0);
        uint8 totalAllocations;

        for (uint16 i = 0; i < allocations.length; i++) {
            totalAllocations += allocations[i].percentage;
        }
        require(totalAllocations <= 100);
        allocations.push(_allocation);
    }

    function payout() external onlyOwner {
        for (uint16 i = 0; i < allocations.length; i++) {
            Allocation memory allocation = allocations[i];
            uint256 amount = (address(this).balance * allocation.percentage) / 100;
            payable(allocation.recipient).transfer(amount);
        }
    }

    function _startTokenId() internal view override returns (uint256) {
        return isZeroIndexed ? 0 : 1;
    }

    function supportsInterface(bytes4 interfaceId) public view virtual override(ONFT721Core, ERC721A) returns (bool) {
        return interfaceId == type(IONFT721A).interfaceId || super.supportsInterface(interfaceId);
    }

    function _debitFrom(address _from, uint16, bytes memory, uint _tokenId) internal virtual override {
        // TODO: (Must) On dst chain ONFT721 from example
        require(ownerOf(_tokenId) == _from);
        _checkApproval(_from, _tokenId);
        transferFrom(_from, address(this), _tokenId);
    }

    function _creditTo(uint16, address _toAddress, uint _tokenId) internal virtual override {
        // TODO: (Must) On dst chain ONFT721 from example
        require(_exists(_tokenId) && ownerOf(_tokenId) == address(this));
        transferFrom(address(this), _toAddress, _tokenId);
    }

    receive() external payable {}
}

