pragma solidity ^0.8.17;

import "@openzeppelin/contracts/interfaces/IERC20.sol";
import "@openzeppelin/contracts/interfaces/IERC165.sol";
import "@openzeppelin/contracts/interfaces/IERC1155.sol";
import "@openzeppelin/contracts/interfaces/IERC1155Receiver.sol";
import "@openzeppelin/contracts/interfaces/IERC1155MetadataURI.sol";
import "@openzeppelin/contracts/proxy/utils/UUPSUpgradeable.sol";

contract Favor is IERC165, IERC1155, IERC1155MetadataURI, UUPSUpgradeable {
    event ManagerChanged(address from, address to);
    event GroupAdded(bytes32 indexed groupID);
    event Minted(
        bytes32 indexed groupID,
        uint256 indexed id,
        uint256 supply,
        uint256 payment,
        uint256 fee
    );

    struct Request {
        uint256 id;
        uint256 count;
        address spender;
        address reciever;
        IERC20 erc20;
        uint256 payment;
        uint256 fee;
    }

    struct Group {
        address[] members;
        uint256[] shares;
        uint256 total;
    }

    struct Token {
        mapping(address => uint256) balance;
        bytes32 groupID;
    }

    uint256 constant BASE = 10000;

    // Contract manager
    address private _manager;
    // MetadataURI pattern
    string private _metadataURI;
    // GroupID => Group
    mapping(bytes32 => Group) private _groups;
    // TokenID => Token
    mapping(uint256 => Token) private _tokens;
    // Account => Operator => Approved
    mapping(address => mapping(address => bool)) private _approvals;

    modifier onlyManager() {
        require(msg.sender == _manager, "only manager");
        _;
    }

    function initialize(string memory metadataURI) external {
        require(_manager == address(0), "already initialized");
        _manager = msg.sender;
        _metadataURI = metadataURI;
    }

    function configure(
        address manager,
        string calldata metadataURI
    ) external onlyManager {
        _metadataURI = metadataURI;
        if (manager != address(0) && _manager != manager) {
            emit ManagerChanged(_manager, manager);
            _manager = manager;
        }
    }

    function getGroup(bytes32 groupID) external view returns (Group memory) {
        return _groups[groupID];
    }

    function getTokenGroup(uint256 id) external view returns (Group memory) {
        return _groups[_tokens[id].groupID];
    }

    function mint(
        Request calldata request,
        uint256 supply,
        bytes32 groupID
    ) external onlyManager {
        _mint(request, supply, groupID);
    }

    function mint(
        Request calldata request,
        uint256 supply,
        address[] calldata members,
        uint256[] calldata shares
    ) external onlyManager {
        _mint(request, supply, _addGroup(members, shares));
    }

    function sell(Request calldata r) external onlyManager {
        Token storage token = _tokens[r.id];
        require(token.groupID != 0, "token not found");
        require(token.balance[address(0)] >= r.count, "insufficient supply");
        _split(token.groupID, r);
        unchecked {
            token.balance[address(0)] -= r.count;
        }
        emit TransferSingle(r.spender, address(0), r.reciever, r.id, r.count);
    }

    function supportsInterface(
        bytes4 id
    ) public view virtual override(IERC165) returns (bool) {
        return
            id == type(IERC165).interfaceId ||
            id == type(IERC1155).interfaceId ||
            id == type(IERC1155MetadataURI).interfaceId ||
            id == type(ERC1967Upgrade).interfaceId;
    }

    function uri(
        uint256
    ) external view override(IERC1155MetadataURI) returns (string memory) {
        return _metadataURI;
    }

    function balanceOf(
        address account,
        uint256 id
    ) public view virtual override(IERC1155) returns (uint256) {
        require(account != address(0), "balance of zero");
        return _tokens[id].balance[account];
    }

    function balanceOfBatch(
        address[] memory accounts,
        uint256[] memory ids
    ) public view virtual override(IERC1155) returns (uint256[] memory) {
        require(accounts.length == ids.length, "length mismatch");

        uint256[] memory balances = new uint256[](accounts.length);
        for (uint256 i = 0; i < accounts.length; ++i) {
            balances[i] = balanceOf(accounts[i], ids[i]);
        }

        return balances;
    }

    function setApprovalForAll(
        address operator,
        bool approved
    ) public virtual override(IERC1155) {
        require(msg.sender != operator, "self approval");
        if (approved) {
            _approvals[msg.sender][operator] = true;
        } else {
            delete _approvals[msg.sender][operator];
        }
        emit ApprovalForAll(msg.sender, operator, approved);
    }

    function isApprovedForAll(
        address account,
        address operator
    ) public view virtual override(IERC1155) returns (bool) {
        return _approvals[account][operator];
    }

    function safeTransferFrom(
        address from,
        address to,
        uint256 id,
        uint256 amount,
        bytes memory data
    ) public virtual override(IERC1155) {
        require(
            from == msg.sender || isApprovedForAll(from, msg.sender),
            "requires owner/approved"
        );
        require(to != address(0), "transfer to the zero");
        Token storage token = _tokens[id];
        uint256 balance = token.balance[from];
        require(balance >= amount, "insufficient balance");
        unchecked {
            token.balance[from] = balance - amount;
        }
        token.balance[to] += amount;
        _checkReceived(msg.sender, from, to, id, amount, data);
        emit TransferSingle(msg.sender, from, to, id, amount);
    }

    function safeBatchTransferFrom(
        address from,
        address to,
        uint256[] memory ids,
        uint256[] memory amounts,
        bytes memory data
    ) public virtual override(IERC1155) {
        require(
            from == msg.sender || isApprovedForAll(from, msg.sender),
            "requires owner/approved"
        );
        require(ids.length == amounts.length, "length mismatch");
        require(to != address(0), "transfer to the zero");

        for (uint256 i = 0; i < ids.length; ++i) {
            uint256 id = ids[i];
            uint256 amount = amounts[i];
            Token storage token = _tokens[id];
            uint256 balance = token.balance[from];
            require(balance >= amount, "insufficient balance");
            unchecked {
                token.balance[from] = balance - amount;
            }
            token.balance[to] += amount;
        }
        _checkBatchReceived(msg.sender, from, to, ids, amounts, data);
        emit TransferBatch(msg.sender, from, to, ids, amounts);
    }

    function _authorizeUpgrade(
        address implementation
    ) internal override(UUPSUpgradeable) onlyManager {}

    function _mint(
        Request calldata r,
        uint256 supply,
        bytes32 groupID
    ) internal {
        require(supply >= r.count, "invalid supply");
        Token storage token = _tokens[r.id];
        require(token.groupID == 0, "already minted");
        _split(groupID, r);
        token.groupID = groupID;
        token.balance[r.reciever] = r.count;
        token.balance[address(0)] = supply - r.count;
        emit Minted(groupID, r.id, supply, r.payment, r.fee);
        emit TransferSingle(r.spender, address(0), r.reciever, r.id, r.count);
    }

    function _split(bytes32 groupID, Request calldata r) internal {
        require(r.count != 0, "zero count");
        require(r.spender != address(0), "zero spender");
        require(r.reciever != address(0), "zero reciever");
        require(address(r.erc20) != address(0), "zero erc20");
        Group storage g = _groups[groupID];
        require(g.total != 0, "group not found");

        uint256 allowed = r.erc20.allowance(r.spender, address(this));
        require(allowed >= r.payment + r.fee, "insufficient allowance");

        if (r.payment > 0) {
            for (uint256 i = 0; i < g.members.length; ++i) {
                uint256 share = (r.payment * g.shares[i]) / g.total;
                bool ok = r.erc20.transferFrom(r.spender, g.members[i], share);
                require(ok, "share transfer failed");
            }
        }
        if (r.fee > 0) {
            bool ok = r.erc20.transferFrom(r.spender, _manager, r.fee);
            require(ok, "fee transfer failed");
        }
    }

    function _addGroup(
        address[] calldata members,
        uint256[] calldata shares
    ) internal returns (bytes32) {
        require(members.length == shares.length, "unzippable");
        bytes32 groupID = keccak256(abi.encode(members, shares));
        Group storage group = _groups[groupID];
        if (group.total == 0) {
            for (uint256 i = 0; i < members.length; ++i) {
                group.members.push(members[i]);
                group.shares.push(shares[i]);
                group.total += shares[i];
            }
            emit GroupAdded(groupID);
        }
        return groupID;
    }

    function _checkReceived(
        address operator,
        address from,
        address to,
        uint256 id,
        uint256 amount,
        bytes memory data
    ) internal {
        if (to.code.length == 0) return;
        try
            IERC1155Receiver(to).onERC1155Received(
                operator,
                from,
                id,
                amount,
                data
            )
        returns (bytes4 response) {
            if (response != IERC1155Receiver.onERC1155Received.selector) {
                revert("tokens rejected");
            }
        } catch Error(string memory reason) {
            revert(reason);
        } catch {
            revert("to non ERC1155Receiver");
        }
    }

    function _checkBatchReceived(
        address operator,
        address from,
        address to,
        uint256[] memory ids,
        uint256[] memory amounts,
        bytes memory data
    ) internal {
        if (to.code.length == 0) return;
        try
            IERC1155Receiver(to).onERC1155BatchReceived(
                operator,
                from,
                ids,
                amounts,
                data
            )
        returns (bytes4 response) {
            if (response != IERC1155Receiver.onERC1155BatchReceived.selector) {
                revert("tokens rejected");
            }
        } catch Error(string memory reason) {
            revert(reason);
        } catch {
            revert("to non ERC1155Receiver");
        }
    }
}

