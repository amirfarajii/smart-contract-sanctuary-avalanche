        _totalSupply = 100 * 1e18; // 18 decimals

        _maxTxAmount = (_totalSupply * 2) / 100; // 2%
        _maxWalletToken = (_totalSupply * 3) / 100; // 3%
        swapThreshold = (_totalSupply / (1000)) * (1); // 0.1%

        router = IJoeRouter02(0x60aE616a2155Ee3d9A68541Ba4544862310933d4); // joe router
        distributor = new DividendDistributor(address(router));

        pair = IJoeFactory(router.factory()).createPair(
            router.WAVAX(),
            address(this)
        );

        setIsFeeExempt(msg.sender, true);
        setIsFeeExempt(address(this), true);
        setIsFeeExempt(address(0xdead), true);

        setIsTxLimitExempt(msg.sender, true);
        setIsTxLimitExempt(address(this), true);
        setIsTxLimitExempt(address(0xdead), true);
        setIsTxLimitExempt(address(pair), true);

        setIsDividendExempt(address(this), true);
        setIsDividendExempt(address(0xdead), true);
        setIsDividendExempt(address(pair), true);
        
        _approve(address(this), address(router), type(uint256).max);
        _approve(msg.sender, address(router), _totalSupply);

        _mint(msg.sender, _totalSupply);
