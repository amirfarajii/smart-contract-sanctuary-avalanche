pragma solidity ^0.8.4;

import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/extensions/ERC721EnumerableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/StringsUpgradeable.sol";
import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";

import "./PickDeadPonz.sol";

contract PonzGameS1 is Initializable, UUPSUpgradeable, ERC721EnumerableUpgradeable, OwnableUpgradeable {
    using StringsUpgradeable for uint256;

    uint256 public constant MAX_MINTS = 500;
    uint256 public constant WL_CAP = 2;
    uint256 public constant PRICE_AVAX = 2 ether;
    uint256 public constant SURRENDER_PENALTY = 70;
    uint256 public constant DEATH_PENALTY = 0;

    string public BASE_URI;
    uint256 public minted;
    uint256[] public ponzAlive;
    mapping(uint256 => uint256) private ponzIndex;
    uint256 public startWL1Timestamp;
    uint256 public startWL2Timestamp;
    uint256 public startMintTimestamp;
    uint256 public startGameTimestamp;
    uint256 public roundExecuted;
    uint256 public lastRequestId;
    uint256 public claimablePrize;
    uint256 public ponzSurrendered;
    uint256 public ponzDead;
    PickDeadPonz public oracleContract;
    bytes32 public merkleRootWL1;
    bytes32 public merkleRootWL2;
    mapping(address => uint256) public whitelist1Claimed;
    mapping(address => uint256) public whitelist2Claimed;
    mapping(uint256 => uint256) public ponzState; // 0 not minted, 1 alive, 2 dead, 3 surrender
    mapping(address => uint256) public prize; // prize that can be claimed for the player

    mapping(address => bool) public allowedToCallKill;

    struct PonzInfo {
        uint256 tokenId;
        uint256 ponzState;
    }

    event onMint(uint256 tokenId);
    event onDeath(uint256 tokenId, address owner, uint256 deathType, uint256 prize, uint256 round);
    event onClaimed(address owner, uint256 prize);

    function initialize() public initializer {
        allowedToCallKill[msg.sender] = true;

       __ERC721_init("Ponz Game Season 1", "PONZ-GAME-S1");
       __ERC721Enumerable_init();
       __Ownable_init();
	   __UUPSUpgradeable_init();
    }
    ///@dev required by the OZ UUPS module
    function _authorizeUpgrade(address) internal override onlyOwner {}

    // metadata
    function _baseURI() internal view virtual override returns (string memory) {
        return BASE_URI;
    }

    function tokenURI(uint256 _tokenId) public view virtual override returns (string memory) {
        require (_exists(_tokenId), "ERC721Metadata: URI query for nonexistent token");
        return string(abi.encodePacked(_baseURI(), "/ponz/", _tokenId.toString(), ".json"));
    }

    /// ADMIN ///

    function setStartEnd(uint256 _startWL1Timestamp, uint256 _startWL2Timestamp, uint256 _startMintTimestamp, uint256 _startGameTimestamp) external onlyOwner {
        startWL1Timestamp  = _startWL1Timestamp;
        startWL2Timestamp  = _startWL2Timestamp;
        startMintTimestamp = _startMintTimestamp;
        startGameTimestamp = _startGameTimestamp;
    }

    function setBaseURI(string calldata _BASE_URI) external onlyOwner {
        BASE_URI = _BASE_URI;
    }

    function setMerkleRootWL(bytes32 _merkleRootWL1, bytes32 _merkleRootWL2) external onlyOwner {
        merkleRootWL1 = _merkleRootWL1;
        merkleRootWL2 = _merkleRootWL2;
    }

    function setOracle(PickDeadPonz _oracleContract) external onlyOwner {
        oracleContract = _oracleContract;
    }

    function addCanCallKill(address _add) external onlyOwner {
        allowedToCallKill[_add] = true;
    }

    function removeCanCallKill(address _remove) external onlyOwner {
        delete allowedToCallKill[_remove];
    }

    function withdrawAVAX() external payable onlyOwner {
        require(ponzAlive.length == 0, "can only withdrawn with all ponz dead");
        address payable to = payable(_msgSender());
        uint256 balance = address(this).balance - claimablePrize;
        (bool sent, ) = to.call{value: balance}("");
        require(sent, "Failed to send AVAX");
    }

    function checkWL1IsOpen(
    ) public view returns (bool) {
        return block.timestamp >= startWL1Timestamp && block.timestamp < startWL2Timestamp;
    }

    function checkWL2IsOpen(
    ) public view returns (bool) {
        return block.timestamp >= startWL2Timestamp && block.timestamp < startMintTimestamp;
    }

    function checkMintIsOpen(
    ) public view returns (bool) {
        return block.timestamp >= startMintTimestamp && startMintTimestamp != 0;
    }

    function gameStarted(
    ) public view returns (bool) {
        return block.timestamp >= startGameTimestamp && startGameTimestamp != 0;
    }
    

    function _mintPonz(address owner, uint256 qty) internal {
        require (minted + qty <= MAX_MINTS, "you can't mint that many right now");

        for (uint256 i = 0; i < qty; i++) {
            minted += 1;
            ponzState[minted] = 1; // alive
            ponzIndex[minted] = ponzAlive.length;
            ponzAlive.push(minted);
            _safeMint(owner, minted);
            emit onMint(minted);
        }
    }

    function mintWithAVAX(bytes32[] calldata _merkleProof1, bytes32[] calldata _merkleProof2, uint256 qty) external payable {
        require (qty > 0 && qty <= 2, "invalid qty");
        
        address owner = msg.sender;

        uint256 transactionCost = PRICE_AVAX * qty;
        require (msg.value >= transactionCost, "not enough AVAX");

        if(checkWL1IsOpen()) {
            require(merkleRootWL1 != 0, "missing root 1");
            require(checkWhitelist1(_merkleProof1, owner), "this address can't mint in the whitelist 1");

            require (qty <= WL_CAP - whitelist1Claimed[owner], "you can't mint that many right now");
            whitelist1Claimed[owner] += qty;
        }
        else if(checkWL2IsOpen()) {
            require(merkleRootWL2 != 0, "missing root 2");
            require(checkWhitelist2(_merkleProof2, owner), "this address can't mint in the whitelist 2");

            require (qty <= WL_CAP - whitelist2Claimed[owner], "you can't mint that many right now");
            whitelist2Claimed[owner] += qty;
        }
        else {
            require(checkMintIsOpen(), "public mint is not open");
        }

        _mintPonz(owner, qty);
    }

    function checkWhitelist1(bytes32[] calldata _merkleProof, address _owner) public view returns (bool){
        bytes32 leaf = keccak256(abi.encodePacked(_owner));
        return MerkleProof.verify(_merkleProof, merkleRootWL1, leaf);
    }

    function checkWhitelist2(bytes32[] calldata _merkleProof, address _owner) public view returns (bool){
        bytes32 leaf = keccak256(abi.encodePacked(_owner));
        return MerkleProof.verify(_merkleProof, merkleRootWL2, leaf);
    }

    function mintingAllowance(bytes32[] calldata _merkleProof1, bytes32[] calldata _merkleProof2, address _owner) public view returns (uint256) {
        if(checkMintIsOpen()){
            return 2;
        }
        if(checkWL1IsOpen()){
            bool whitelist1 = checkWhitelist1(_merkleProof1, _owner);
            if(!whitelist1){
                return 0;
            }
            return WL_CAP - whitelist1Claimed[_owner];
        }
        if(checkWL2IsOpen()){
            bool whitelist2 = checkWhitelist2(_merkleProof2, _owner);
            if(!whitelist2){
                return 0;
            }
            return WL_CAP - whitelist2Claimed[_owner];
        }

        return 0;
    }

    function batchedPonzOfOwner(address _owner, uint256 _offset, uint256 _maxSize) public view returns (PonzInfo[] memory) {
        if (_offset >= balanceOf(_owner)) {
            return new PonzInfo[](0);
        }

        uint256 outputSize = _maxSize;
        if (_offset + _maxSize >= balanceOf(_owner)) {
            outputSize = balanceOf(_owner) - _offset;
        }
        PonzInfo[] memory ponz = new PonzInfo[](outputSize);

        for (uint256 i = 0; i < outputSize; i++) {
            uint256 tokenId = tokenOfOwnerByIndex(_owner, _offset + i);
            ponz[i] = PonzInfo({
                tokenId: tokenId,
                ponzState: ponzState[tokenId]
            });
        }

        return ponz;
    }

    function getPrizePool(
    ) public view returns (uint256) {
        if(ponzAlive.length == 0){
            return 0;
        }
        return address(this).balance - claimablePrize;
    }

    function numberOfPonzAlive(
    ) public view returns (uint256) {
        return ponzAlive.length;
    }

    function getCurrentPrizeSurrender(
    ) public view returns (uint256) {
        if(ponzAlive.length == 0){
            return 0;
        }
        return SURRENDER_PENALTY * (address(this).balance - claimablePrize)/(100*ponzAlive.length);
    }

    function getCurrentPrizeDeath(
    ) public view returns (uint256) {
        if(ponzAlive.length == 0){
            return 0;
        }
        return DEATH_PENALTY * (address(this).balance - claimablePrize)/(100*ponzAlive.length);
    }

    function _removePonz(uint256 _ponzId) internal {
        uint256 lastPonzIndex = ponzAlive.length - 1;
        uint256 tokenIndex = ponzIndex[_ponzId];
        uint256 lastPonzId = ponzAlive[lastPonzIndex];

        ponzAlive[tokenIndex] = lastPonzId;
        ponzIndex[lastPonzId] = tokenIndex;

        delete ponzIndex[_ponzId];
        ponzAlive.pop();
    }

    function surrender(uint256[] calldata _ponzIds) external {
        require(gameStarted(), "cannot surrender right now");
        address owner = _msgSender();
        uint256 length = _ponzIds.length;
        uint256 currentRound = getCurrentRound();
        for (uint256 i = 0; i < length; i++) {
            uint256 ponzId = _ponzIds[i];
            require(ownerOf(ponzId) == owner, "You don't own this Ponz");
            require(ponzState[ponzId] == 1, "This Ponz is not alive");
            uint256 prizeForPonz = getCurrentPrizeSurrender();
            ponzState[ponzId] = 3;
            _removePonz(ponzId);
            prize[owner] += prizeForPonz;
            claimablePrize += prizeForPonz;
            ponzSurrendered += 1;
            emit onDeath(ponzId, owner, 3, prizeForPonz, currentRound);
        }
    }

    function getCurrentRound(
    ) public view returns (uint256) {
        if(block.timestamp < startGameTimestamp){
            return 0;
        }
        return 1 + (block.timestamp - startGameTimestamp)/(60*60);
    }

    function prepareKill() external {
        require(gameStarted(), "cannot kill right now");
        require(address(oracleContract) != address(0), "invalid oracle contract");
        require(allowedToCallKill[msg.sender], "invalid caller");
        require(roundExecuted < getCurrentRound(), "cannot prepare right now");

        oracleContract.requestRandomWords();
    }

    function killPonz() external {
        require(gameStarted(), "cannot kill right now");
        require(address(oracleContract) != address(0), "invalid oracle contract");
        require(address(oracleContract) == msg.sender, "invalid caller");
        require(roundExecuted < getCurrentRound(), "cannot kill right now");
        roundExecuted += 1;

        require(ponzAlive.length >= 2, "cannot kill right now");

        uint256 requestId = oracleContract.lastRequestId();

        require(requestId != lastRequestId, "invalid random number");

        lastRequestId = requestId;

        (uint256 idx1, uint256 idx2) = oracleContract.fisherYates(ponzAlive.length);

        uint256 _ponzId1 = ponzAlive[idx1];
        uint256 _ponzId2 = ponzAlive[idx2];

        require(ponzState[_ponzId1] == 1, "invalid ponz 1");
        ponzState[_ponzId1] = 2;
        _removePonz(_ponzId1);
        address owner1 = ownerOf(_ponzId1);
        //prize[owner1] += getCurrentPrizeDeath();
        ponzDead += 1;
        emit onDeath(_ponzId1, owner1, 2, 0, roundExecuted);

        if(ponzAlive.length > 1){
            require(ponzState[_ponzId2] == 1, "invalid ponz 2");
            ponzState[_ponzId2] = 2;
            _removePonz(_ponzId2);
            address owner2 = ownerOf(_ponzId2);
            //prize[owner2] += getCurrentPrizeDeath();
            ponzDead += 1;
            emit onDeath(_ponzId2, owner2, 2, 0, roundExecuted);
        }
    }

    function claimPrize() external {
        address owner = _msgSender();
        uint256 claimedPrize = prize[owner];
        require (claimedPrize > 0, "invalid address");
        require(address(this).balance >= claimedPrize, "not enough AVAX");
        prize[owner] = 0;
        claimablePrize -= claimedPrize;
        address payable to = payable(owner);
        (bool sent, ) = to.call{value: claimedPrize}("");
        require(sent, "Failed to send AVAX");
        emit onClaimed(owner, claimedPrize);
    }


    function gameStatus(uint256 numberOfPonz) public view returns (uint256 prizePool, uint256 alivePonz, uint256 deadPonz, uint256 surrenderedPonz, uint256[] memory prizesSurrender) {
        prizePool = getPrizePool();
        alivePonz = ponzAlive.length;
        deadPonz = ponzDead;
        surrenderedPonz = ponzSurrendered;

        if(numberOfPonz > alivePonz){
            numberOfPonz = alivePonz;
        }

        prizesSurrender = new uint256[](numberOfPonz);

        if(numberOfPonz > 0){
            uint256 prizePoolForm = address(this).balance - claimablePrize;
            uint256 ponzAliveForm = ponzAlive.length;
            prizesSurrender[0] = SURRENDER_PENALTY * prizePoolForm/(100*ponzAliveForm);
            for (uint256 i = 1; i < numberOfPonz; i++) {
                ponzAliveForm -= 1;
                prizePoolForm -= prizesSurrender[i-1];
                prizesSurrender[i] = SURRENDER_PENALTY * prizePoolForm/(100*ponzAliveForm);
            }
        }
    }

}

