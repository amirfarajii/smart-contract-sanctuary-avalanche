pragma solidity ^0.8.9;





contract Lottery is VRFV2WrapperConsumerBase, ConfirmedOwner {
    using SafeMath for uint256;

    enum STATE {
        INACTIVE,
        ACTIVE
    }

    struct RequestStatus {
        uint256 paid; // amount paid in link
        bool fulfilled; // whether the request has been successfully fulfilled
        uint256[] randomWords;
    }

    struct PlayerInfo {
        address account;
        uint256 time;
        uint256[5] selections;
    }

    struct LotteryInfo {
        uint256 id;
        uint256 entryFee;
        PlayerInfo[] players;
        address[] winners;
        uint256[5] winningNumbers;
        STATE status;
        bool isClaimed;
        uint256 totalTicket;
        uint256 sold;
        uint256 reward;
    }

    uint256 public currentId;
    uint256 public prevLotteryBalance;
    uint256 public maxNumberCount = 20;
    uint256 public lotteryCommission = 40;
    address public admin;
    address public caller;
    address public treasury = 0xAD3f4Ad4E517967405a15308f7bf7eC90a9a1007;
    address linkAddress = 0x5947BB275c521040051D82396192181b413227A3;
    address wrapperAddress = 0x721DFbc5Cfe53d32ab00A9bdFa605d3b8E1f3f42;
    uint256[] public requestIds;
    uint256 public lastRequestId;
    uint32 callbackGasLimit = 400000;
    uint16 requestConfirmations = 3;
    uint32 numWords = 5;
    mapping(uint256 => LotteryInfo) public lotteries; //lottery id => lottery info
    mapping(uint256 => mapping(address => uint256)) public playerLotteryCounts;
    mapping(uint256 => mapping(address => bool)) public lotteryWinners;
    mapping(uint256 => bool) public lotteryEnd;
    mapping(uint256 => address[]) public lotteryPlayers;
    mapping(uint256 => RequestStatus) public s_requests; /* requestId --> requestStatus */
    ERC20 USDC = ERC20(0xB97EF9Ef8734C71904D8002F8b6Bc66Dd9c48a6E);

    event LotteryCreated(
        address indexed creator,
        uint256 indexed lotteryId,
        uint256 timestamp
    );
    event LotteryEntered(
        address indexed participant,
        uint256 indexed lotteryId,
        uint256 timestamp
    );
    event LotteryEnded(
        address indexed creator,
        uint256 indexed lotteryId,
        uint256 timestamp
    );
    event LotteryClaimed(uint256 indexed lotteryId, uint256 timestamp);
    event RequestSent(uint256 requestId, uint32 numWords);
    event RequestFulfilled(
        uint256 requestId,
        uint256[] randomWords,
        uint256 payment
    );

    constructor()
        ConfirmedOwner(msg.sender)
        VRFV2WrapperConsumerBase(linkAddress, wrapperAddress)
    {
        admin = msg.sender;
    }

    function getLotteryInfo(uint256 _lotteryId)
        public
        view
        returns (LotteryInfo memory)
    {
        return lotteries[_lotteryId];
    }

    function getLotteryPlayers(uint256 _lotteryId)
        external
        view
        returns (address[] memory)
    {
        return lotteryPlayers[_lotteryId];
    }

    function updateLotteryReward(uint256 _lotteryId, uint256 _reward)
        external
        onlyAdmin
    {
        lotteries[_lotteryId].reward = _reward;
    }

    function requestRandomWords() internal returns (uint256 requestId) {
        requestId = requestRandomness(
            callbackGasLimit,
            requestConfirmations,
            numWords
        );
        s_requests[requestId] = RequestStatus({
            paid: VRF_V2_WRAPPER.calculateRequestPrice(callbackGasLimit),
            randomWords: new uint256[](0),
            fulfilled: false
        });
        requestIds.push(requestId);
        lastRequestId = requestId;
        emit RequestSent(requestId, numWords);
        return requestId;
    }

    function fulfillRandomWords(
        uint256 _requestId,
        uint256[] memory _randomWords
    ) internal override {
        require(s_requests[_requestId].paid > 0, "request not found");
        s_requests[_requestId].fulfilled = true;
        s_requests[_requestId].randomWords = _randomWords;
        emit RequestFulfilled(
            _requestId,
            _randomWords,
            s_requests[_requestId].paid
        );
    }

    function updateMaxNumberCount(uint256 _number) external onlyAdmin {
        maxNumberCount = _number;
    }

    function getRequestStatus(uint256 _requestId)
        public
        view
        returns (
            uint256 paid,
            bool fulfilled,
            uint256[] memory randomWords
        )
    {
        require(s_requests[_requestId].paid > 0, "request not found");
        RequestStatus memory request = s_requests[_requestId];
        return (request.paid, request.fulfilled, request.randomWords);
    }

    function withdrawLink() public onlyOwner {
        LinkTokenInterface link = LinkTokenInterface(linkAddress);
        require(
            link.transfer(msg.sender, link.balanceOf(address(this))),
            "Unable to transfer"
        );
    }

    function createLottery(
        uint256 entryFee,
        uint256 _totalTicket
    ) external onlyAdmin {
        currentId++;
        lotteries[currentId].id = currentId;
        lotteries[currentId].isClaimed = false;
        lotteries[currentId].status = STATE.ACTIVE;
        lotteries[currentId].entryFee = entryFee;
        lotteries[currentId].totalTicket = _totalTicket;
        lotteries[currentId].reward += prevLotteryBalance;
        emit LotteryCreated(msg.sender, currentId, block.timestamp);
    }

    function enterLottery(uint256 _lotteryId, uint256[5] memory _selections)
        external
    {
        for (uint256 i = 0; i < 5; i++) {
            uint256 newVal = _selections[i];
            bool _isUnique = isUnique(newVal, _selections);
            require(_isUnique, "Error: None unique array");
        }
        uint256 availableTickets = lotteries[_lotteryId].totalTicket -
            lotteries[_lotteryId].sold;
        require(msg.sender != address(0), "Invalid address");
        require(!lotteryEnd[_lotteryId], "Lottery has ended");
        require(availableTickets > 0, "Tickets soldout");
        LotteryInfo memory lottery = lotteries[_lotteryId];
        require(lottery.status == STATE.ACTIVE, "Lottery Inactive");
        uint256 entryFee = lotteries[_lotteryId].entryFee;
        USDC.transferFrom(msg.sender, treasury, entryFee);
        if (playerLotteryCounts[_lotteryId][msg.sender] < 1) {
            lotteryPlayers[_lotteryId].push(msg.sender);
        }
        lotteries[_lotteryId].players.push(
            PlayerInfo({
                account: msg.sender,
                time: block.timestamp,
                selections: _selections
            })
        );
        lotteries[_lotteryId].sold += 1;
        lotteries[currentId].reward += entryFee;
        prevLotteryBalance += entryFee;
        emit LotteryEntered(msg.sender, _lotteryId, block.timestamp);
    }

    function compare(uint256 number, uint256[5] memory arr)
        public
        pure
        returns (bool)
    {
        uint256 count = 0;
        bool status = false;
        for (uint256 i = 0; i < arr.length; i++) {
            if (number == arr[i]) {
                count++;
            }
        }
        if(count > 0) {
            status = true;
        }
        return status;
    }

    function isUnique(uint256 number, uint256[5] memory arr)
        public
        pure
        returns (bool)
    {
        bool status = false;
        uint256 count = 0;
        for (uint256 i = 0; i < arr.length; i++) {
            if (number == arr[i]) {
                count++;
            }
        }
        if (count <= 1) {
            status = true;
        }
        return status;
    }

    function doesNotExist(uint256 number, uint256[5] memory arr)
        public
        pure
        returns (bool)
    {
        bool status = false;
        uint256 count = 0;
        for (uint256 i = 0; i < arr.length; i++) {
            if (number == arr[i]) {
                count++;
            }
        }
        if (count < 1) {
            status = true;
        }
        return status;
    }

    function generateRandomNumbers(uint256 _lotteryId) external onlyAdmin {
        requestRandomWords();
        lotteryEnd[_lotteryId] = true;
    }

    function endLottery(uint256 _lotteryId) external onlyAdmin {
        (, bool requestStatus, uint256[] memory arr) = getRequestStatus(
            lastRequestId
        );
        require(
            lotteries[_lotteryId].status == STATE.ACTIVE,
            "Lottery inactive"
        );
        require(requestStatus, "Await fulfillment");
        uint256[5] memory mergedArr;
        uint256 count = 0;
        while (count < 5) {
            uint256 newVal = (arr[count] % maxNumberCount) + 1;
            bool _isUnique = doesNotExist(newVal, mergedArr);
            if (_isUnique) {
                mergedArr[count] = newVal;
                count++;
            }
        }
        lotteries[_lotteryId].status = STATE.INACTIVE;
        lotteries[_lotteryId].winningNumbers = mergedArr;
        PlayerInfo[] memory playersInfo = lotteries[_lotteryId].players;
        address[] memory players = lotteryPlayers[_lotteryId];
        for (uint256 i = 0; i < players.length; i++) {
            PlayerInfo memory playerInfo = playersInfo[i];
            uint256[5] memory selections = playerInfo.selections;
            bool status = false;
            for (uint256 j = 0; j < selections.length; j++) {
                status = compare(selections[i], mergedArr);
            }
            if (status) {
                if (!lotteryWinners[_lotteryId][playerInfo.account]) {
                    //prevents double entry
                    lotteries[_lotteryId].winners.push(playerInfo.account);
                    lotteryWinners[_lotteryId][playerInfo.account] = true;
                }
            }
        }
        //share price among winners
        address[] memory winners = lotteries[_lotteryId].winners;
        uint256 totalWinners = winners.length;
        if (totalWinners > 0) {
            uint fee;
            uint amount;
            for (uint256 j = 0; j < totalWinners; j++) {
                uint256 reward = lotteries[_lotteryId].reward;
                if(lotteryCommission > 0) {
                    fee = reward.mul(lotteryCommission.div(100));
                    amount = reward.sub(fee).div(totalWinners);
                }else{
                    amount = reward.div(totalWinners);
                }
                USDC.transferFrom(treasury, winners[j], amount);
            }
            lotteries[_lotteryId].isClaimed = true;
            prevLotteryBalance = 0;
            emit LotteryClaimed(_lotteryId, block.timestamp);
        }
    }

    function updateLotteryEntryFee(uint256 _lotteryId, uint256 entryFee)
        external
        onlyAdmin
    {
        lotteries[_lotteryId].entryFee = entryFee;
    }

    function updateTreasury(address _treasury) external onlyAdmin {
        require(_treasury != address(0), "Error: treasury address is zero");
        treasury = _treasury;
    }

    function updateLotteryCommission(uint256 _commission) external onlyAdmin {
        lotteryCommission = _commission;
    }

    modifier onlyAdmin() {
        require(msg.sender == admin, "Unauthorized");
        _;
    }

    modifier middleware() {
        require(msg.sender == admin || msg.sender == caller, "Unauthorized");
        _;
    }
}