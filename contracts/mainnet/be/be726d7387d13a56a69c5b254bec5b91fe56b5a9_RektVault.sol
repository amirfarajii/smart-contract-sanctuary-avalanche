    IERC721 Rekt;
    IERC20 MNKZ;
    IStaking Staking;

    constructor(address _monkeez, address _rekt, address _mnkz, address _staking) {
        Monkeez = IERC721(_monkeez);
        Rekt = IERC721(_rekt);
        MNKZ = IERC20(_mnkz);
        Staking = IStaking(_staking);
    }

    event DisbursedRewards(uint256 amount, uint256 amountPerToken);
    event ClaimedReward(address claimer, uint256 tokenId, uint256 amount);

    function getRewardsOfToken(uint256 _tokenId) public view returns(uint) {
        require(rewardIndex >= rektMonkeeToIndex[_tokenId], "VAULT: Error in rewardIndex");
        return rewardIndex - rektMonkeeToIndex[_tokenId];
    }

    function getRewardsOfManyTokens(uint256[] calldata _tokenIds) public view returns(uint) {
        uint256 _reward = 0;
        for (uint256 i = 0; i < _tokenIds.length; i++) {
            if (rewardIndex >= rektMonkeeToIndex[_tokenIds[i]]) {
                _reward += (rewardIndex - rektMonkeeToIndex[_tokenIds[i]]);
            }
        }
        
        return _reward;
    }

    function claimRewardsForTokens(uint256[] calldata _tokenIds) public nonReentrant {
        require(!paused, "Contract is paused."); 

        for (uint256 i = 0; i < _tokenIds.length; i++) {
            address _tokenOwner = Rekt.ownerOf(_tokenIds[i]);
            require(msg.sender == _tokenOwner, "Only the owner of a token can claim rewards");

            uint256 _reward = getRewardsOfToken(_tokenIds[i]);
            require(_reward > 0, "You don't have any rewards");

            totalRewardsVault -= _reward;
            rektMonkeeToIndex[_tokenIds[i]] = rewardIndex;

            require(MNKZ.transfer(_tokenOwner, _reward), "Failed to transfer MNKZ tokens!");

            emit ClaimedReward(_tokenOwner, i, _reward);
        }
    }

    function getVaultedMonkeez() external view returns(uint256[] memory) {
        return vaultedMonkeez;
    }

    function flipPaused() public onlyOwner {
        paused = !paused;
    }

    function setCooldown(uint256 _newAmount) public onlyOwner {
        cooldown = _newAmount;
    }

    function vaultMonkeez(uint256[] calldata _tokenIds) public {
        for (uint256 i = 0; i < _tokenIds.length; i++) {
            Monkeez.safeTransferFrom(msg.sender, address(this), _tokenIds[i]);
            vaultedMonkeez.push(_tokenIds[i]);
            if (Staking.stakedMonkeez(_tokenIds[i]) == 0) {
                _monkeezToStake.push(_tokenIds[i]);
            }
        }

        if (_monkeezToStake.length > 0) {
            Staking.stakeMonkeez(_monkeezToStake);
            delete _monkeezToStake;
        }

        // first time vaulting
        if (timestamp == 0) {
            timestamp = block.timestamp;
        }
    }

    // Claim for rekt holders
    function adminClaim(uint256 _start, uint256 _end) public payable onlyOwner {
        for (uint256 i = _start; i <= _end; i++) { 
            address _tokenOwner = Rekt.ownerOf(i);
            uint256 _reward = getRewardsOfToken(i);
            if (_reward > 0) {
                totalRewardsVault -= _reward;
                rektMonkeeToIndex[i] = rewardIndex;

                require(MNKZ.transfer(_tokenOwner, _reward), "Failed to transfer MNKZ tokens!");

                emit ClaimedReward(_tokenOwner, i, _reward);
            }
        }
    } 

    // Internal
    function _removeFromVault(uint256 _tokenId) internal {
        uint256 index;

        for (uint256 i = 0; i < vaultedMonkeez.length; i++) {
            if (_tokenId == vaultedMonkeez[i]) {
                index = i;
            }
        }

        for(uint256 i = index; i < (vaultedMonkeez.length - 1); i++) {
            vaultedMonkeez[i] = vaultedMonkeez[i + 1];
        }

        vaultedMonkeez.pop();
    }

    // Functions to update indexes in case of some error. Should not be needed.
    function updateRewardIndex(uint _newIndex) external onlyOwner {
        rewardIndex = _newIndex;
    }

    function updateTokenRewardIndex(uint256 _token, uint256 _newIndex) external onlyOwner {
        rektMonkeeToIndex[_token] = _newIndex;

    }

    function updateManyTokenRewardIndex(uint256[] calldata _tokens, uint256 _newIndex) external onlyOwner {
        for (uint256 i = 0; i < _tokens.length; i++) {
            rektMonkeeToIndex[_tokens[i]] = _newIndex;
        }
    }

    // Withdraw ERC721 and ERC20
    function withdrawERC20(address _tokenAddress, uint256 _amount) public onlyOwner {
        IERC20 token = IERC20(_tokenAddress);

        token.transfer(owner(), _amount);
    }

    function withdrawManyMonkeez(uint256[] calldata _tokenIds) public onlyOwner {
        for (uint256 i = 0; i < _tokenIds.length; i++) {
            withdrawMonkee(_tokenIds[i]);
        }
    }

    function withdrawMonkee(uint256 _tokenId) public onlyOwner {
        Monkeez.safeTransferFrom(address(this), owner(), _tokenId);

        _removeFromVault(_tokenId);
    }

    function withdrawAllMonkeez() public onlyOwner {
        delete vaultedMonkeez;
        for (uint256 i = 0; i < vaultedMonkeez.length; i++) {
            Monkeez.safeTransferFrom(address(this), owner(), vaultedMonkeez[i]);
        }
    }

    // ERC721 Receiver
    function onERC721Received(address, address, uint256, bytes calldata) external view override returns (bytes4) {
        require(msg.sender == address(Monkeez));        
        return IERC721Receiver.onERC721Received.selector;
    }

    // Keepers Functions
    function checkUpkeep(
        bytes calldata /* checkData */
    ) external view override returns (bool upkeepNeeded, bytes memory performData) {
        upkeepNeeded = false;

        uint256 _claimable = Staking.claimableTokens(vaultedMonkeez);

        // If cooldown has passed and there is a reward available, upkeep is needed
        if (!paused &&
            block.timestamp > (timestamp + cooldown) &&
            _claimable > 0) {
            upkeepNeeded = true;
        }

        return (upkeepNeeded, "");
    }

    function performUpkeep(
        bytes calldata /* performData */
    ) external override {
        require(!paused, "Contract paused!");

        // Calculate reward
        uint256 _claimable = Staking.claimableTokens(vaultedMonkeez);
        // MNKZ applies decimals internally upon minting
        uint256 _individualReward = (_claimable * 10**18) / 500;

        // Claim reward
        Staking.claimTokens(vaultedMonkeez);

        // Update indexes
        rewardIndex += _individualReward;
        totalRewardsVault += (_individualReward * 500);
        
        // Set new timestamp
        timestamp = block.timestamp;

        emit DisbursedRewards(_claimable, _individualReward);
    }


}