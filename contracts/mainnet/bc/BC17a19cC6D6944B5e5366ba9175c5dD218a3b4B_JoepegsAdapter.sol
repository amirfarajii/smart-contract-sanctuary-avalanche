import {OrderTypes} from "./libraries/OrderTypes.sol";
import "./IJoepegsExchange.sol";
import "./IERC721Royalties.sol";

contract JoepegsAdapter {

  address private _joepegsContract;

  constructor() {
    _joepegsContract = 0xaE079eDA901F7727D0715aff8f82BA8295719977;
  }

  function matchAskWithTakerBidUsingAVAXAndWAVAX(
    OrderTypes.TakerOrder calldata takerBid,
    OrderTypes.MakerOrder calldata makerAsk
  ) external payable {
    IJoepegsExchange exchange = IJoepegsExchange(_joepegsContract);
    
    OrderTypes.TakerOrder memory adapterOrder = OrderTypes.TakerOrder(
      takerBid.isOrderAsk,
      address(this),
      takerBid.price,
      takerBid.tokenId,
      takerBid.minPercentageToAsk,
      takerBid.params
    );

    exchange.matchAskWithTakerBidUsingAVAXAndWAVAX{value: msg.value}(adapterOrder, makerAsk);

    // IERC721Royalties nft = IERC721Royalties(makerAsk.collection);
    // nft.transferFrom(address(this), takerBid.taker, takerBid.tokenId);
  }

  function getCallData(
    OrderTypes.TakerOrder calldata takerBid,
    OrderTypes.MakerOrder calldata makerAsk
  ) external pure returns (bytes memory) {
    return abi.encodeWithSelector(
      this.matchAskWithTakerBidUsingAVAXAndWAVAX.selector, 
      takerBid, 
      makerAsk
    );
  }
}

