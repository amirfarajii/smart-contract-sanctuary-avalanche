pragma solidity 0.8.10;

contract Redemption is IRedemption, Ownable {
    using SafeTransferLib for ERC20;

    event Claimed(address indexed claimer, uint256 amountIn, uint256 amount, uint256 USDCAmountOut);
    event TokenRecovery(address tokenRecovered, uint256 amount);

    mapping(address => uint256) public amountClaimed;

    bytes32 public immutable merkleRoot;

    ERC20 public immutable USDC;

    uint256 private constant WSWAGMI_PRECISION = 1e18;

    // Exact amount, 6 decimals.
    uint256 public constant USDC_EXCHANGE_RATE = 427687878;

    address public immutable treasury;

    uint256 public deadline;
    bool public exchangeEnabled;

    modifier notTimedOut() {
        require(block.timestamp < deadline);
        _;
    }

    constructor(
        bytes32 _merkleRoot,
        address _USDC,
        address _treasury,
        uint256 _deadline
    ) {
        merkleRoot = _merkleRoot;
        USDC = ERC20(_USDC);
        treasury = _treasury;
        deadline = _deadline;
        exchangeEnabled = true;
    }

    function exchangeForAssets(
        uint256 amountIn,
        address account,
        uint256 amount,
        bytes32[] calldata merkleProof
    ) external notTimedOut returns (uint256 USDCtoReceive) {
        require(exchangeEnabled, 'Exchange not enabled');

        require(msg.sender == account, 'Sender is not account');
        require(tx.origin == msg.sender, 'Not eoa');

        uint256 newAmountClaimed = amountIn + amountClaimed[account];
        require(newAmountClaimed <= amount, 'Amount is larger than allowed');

        // Verify the merkle proof.
        bytes32 node = keccak256(abi.encodePacked(account, amount));
        require(MerkleProof.verify(merkleProof, merkleRoot, node), 'MerkleDistributor: Invalid proof');

        amountClaimed[account] = newAmountClaimed;

        USDCtoReceive = this.getAssetsToReceiveForAmount(amountIn);

        USDC.transfer(msg.sender, USDCtoReceive);

        emit Claimed(msg.sender, amountIn, amount, USDCtoReceive);
    }

    function getAssetsToReceiveForAmount(uint256 _amountIn) external pure returns (uint256) {
        return (_amountIn * USDC_EXCHANGE_RATE) / WSWAGMI_PRECISION;
    }

    function clawBackAssets() external onlyOwner {
        require(block.timestamp > deadline, 'block.timestamp <= deadline');
        USDC.transfer(treasury, USDC.balanceOf(address(this)));
    }

    function getAmountClaimed(address account) external view returns (uint256) {
        return amountClaimed[account];
    }

    function setDeadline(uint256 _deadline) public onlyOwner {
        deadline = _deadline;
    }

    function setExchangeEnabled(bool _exchangeEnabled) public onlyOwner {
        exchangeEnabled = _exchangeEnabled;
    }

    function recoverWrongTokens(address _tokenAddress, uint256 _tokenAmount) external onlyOwner {
        require(_tokenAddress != address(USDC), 'Cannot be USDC');
        ERC20(_tokenAddress).safeTransfer(address(msg.sender), _tokenAmount);
        emit TokenRecovery(_tokenAddress, _tokenAmount);
    }
}